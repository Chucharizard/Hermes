<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- CARGAR TEMA DE COLORES (debe ir primero en XAML) -->
    <!-- Los colores se definen en archivos de tema separados -->
    <!-- Cambia entre Theme.Emerald.xaml, Theme.Purple.xaml, etc. -->
    <!-- ========================================== -->

    <ResourceDictionary.MergedDictionaries>
        <!-- TEMA ACTIVO: Verde Esmeralda/Petróleo (Profesional para inmobiliaria) -->
        <ResourceDictionary Source="Themes/Theme.Emerald.xaml"/>

        <!-- Otros temas disponibles (comentados): -->
        <!-- <ResourceDictionary Source="Themes/Theme.Purple.xaml"/> --> <!-- Morado/Azul original -->
    </ResourceDictionary.MergedDictionaries>

    <!-- ========================================== -->
    <!-- RENDERIZADO DE TEXTO GLOBAL - APLICADO A TODA LA APP -->
    <!-- ========================================== -->

    <!-- Estilo base para TextBlock - Mejora la nitidez del texto -->
    <Style TargetType="TextBlock">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
    </Style>

    <!-- Estilo base para Label - Mejora la nitidez del texto -->
    <Style TargetType="Label">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
    </Style>

    <!-- Estilo base para TextBox - Mejora la nitidez del texto -->
    <Style TargetType="TextBox">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
    </Style>

    <!-- Estilo base para Button - Mejora la nitidez del texto -->
    <Style TargetType="Button">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
    </Style>

    <!-- ========================================== -->
    <!-- ESTILOS DE BOTONES -->
    <!-- ========================================== -->

    <!-- Botón Primario con Degradado -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

