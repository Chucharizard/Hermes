<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- TEMA: VERDE ESMERALDA / PETRÓLEO -->
    <!-- Profesional, elegante, apropiado para inmobiliaria -->
    <!-- ========================================== -->

    <!-- COLORES BASE (para DropShadowEffect y otras propiedades Color) -->
    <Color x:Key="BackgroundDarkestColor">#1a4d4d</Color>
    <Color x:Key="BackgroundDarkColor">#234e52</Color>
    <Color x:Key="BackgroundMediumColor">#2d5a5a</Color>
    <Color x:Key="PrimaryColorValue">#50c878</Color>
    <Color x:Key="PrimaryDarkColorValue">#2e8b57</Color>

    <!-- Fondos Oscuros (Verde Petróleo) -->
    <SolidColorBrush x:Key="BackgroundDarkest" Color="{StaticResource BackgroundDarkestColor}"/>
    <SolidColorBrush x:Key="BackgroundDark" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="BackgroundMedium" Color="{StaticResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="BackgroundCharcoal" Color="#2d3748"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#e8dcc4"/>
    <SolidColorBrush x:Key="BackgroundLightColor" Color="#f7f3e9"/>
    <SolidColorBrush x:Key="BackgroundGrayColor" Color="#e8dcc4"/>

    <!-- Verde Esmeralda (Color principal - Acentos) -->
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource PrimaryColorValue}"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="{StaticResource PrimaryDarkColorValue}"/>
    <SolidColorBrush x:Key="PrimaryDeeperColor" Color="#1e6e3f"/>    <!-- Verde esmeralda más oscuro -->
    <SolidColorBrush x:Key="PrimaryLightColor" Color="#7fd4a8"/>     <!-- Verde esmeralda claro -->

    <!-- Colores de acción -->
    <SolidColorBrush x:Key="InfoColor" Color="#50c878"/>             <!-- Verde esmeralda (info) -->
    <SolidColorBrush x:Key="InfoHoverColor" Color="#2e8b57"/>        <!-- Verde esmeralda oscuro (hover) -->
    <SolidColorBrush x:Key="SuccessColor" Color="#50c878"/>          <!-- Verde esmeralda (éxito) -->
    <SolidColorBrush x:Key="SuccessHoverColor" Color="#2e8b57"/>     <!-- Verde esmeralda oscuro (hover) -->
    <SolidColorBrush x:Key="WarningColor" Color="#cd7f32"/>          <!-- Bronce/cobre (advertencia) -->
    <SolidColorBrush x:Key="WarningHoverColor" Color="#b87333"/>     <!-- Bronce oscuro (hover) -->
    <SolidColorBrush x:Key="DangerColor" Color="#c45c4d"/>           <!-- Terracota suave (peligro) -->
    <SolidColorBrush x:Key="DangerHoverColor" Color="#a84a3d"/>      <!-- Terracota oscuro (hover) -->

    <!-- Colores de texto -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#ECF0F1"/>      <!-- Texto principal (blanco/gris claro) -->
    <SolidColorBrush x:Key="TextAccentColor" Color="#50c878"/>       <!-- Texto con acento (verde esmeralda) -->
    <SolidColorBrush x:Key="TextSuccessColor" Color="#50c878"/>      <!-- Texto éxito (verde esmeralda) -->
    <SolidColorBrush x:Key="TextDangerColor" Color="#c45c4d"/>       <!-- Texto peligro (terracota) -->

    <!-- Colores oscuros para sidebar -->
    <SolidColorBrush x:Key="DarkColor" Color="#234e52"/>             <!-- Verde petróleo oscuro -->
    <SolidColorBrush x:Key="DarkHoverColor" Color="#1a4d4d"/>        <!-- Verde petróleo muy oscuro -->
    <SolidColorBrush x:Key="SidebarColor" Color="#234e52"/>          <!-- Verde petróleo oscuro -->

    <!-- Bordes -->
    <SolidColorBrush x:Key="BorderColor" Color="#3d6b6b"/>           <!-- Verde petróleo para bordes -->
    <SolidColorBrush x:Key="BorderLightColor" Color="#5a8585"/>      <!-- Verde petróleo claro -->

    <!-- ========================================== -->
    <!-- DEGRADADOS MODERNOS -->
    <!-- ========================================== -->

    <!-- Degradado principal (verde esmeralda vibrante) -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#50c878" Offset="0"/>
        <GradientStop Color="#2e8b57" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientVertical" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#50c878" Offset="0"/>
        <GradientStop Color="#2e8b57" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado oscuro (fondos principales - verde petróleo) -->
    <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1a4d4d" Offset="0"/>
        <GradientStop Color="#234e52" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkGradientVertical" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1a4d4d" Offset="0"/>
        <GradientStop Color="#234e52" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado sidebar (verde petróleo oscuro) -->
    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#234e52" Offset="0"/>
        <GradientStop Color="#1a4d4d" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado medio (verde petróleo medio) -->
    <LinearGradientBrush x:Key="MediumGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#2d5a5a" Offset="0"/>
        <GradientStop Color="#3d6b6b" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado éxito (verde esmeralda) -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#50c878" Offset="0"/>
        <GradientStop Color="#2e8b57" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado verde profundo -->
    <LinearGradientBrush x:Key="DeepBlueGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#234e52" Offset="0"/>
        <GradientStop Color="#1a4d4d" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado verde claro -->
    <LinearGradientBrush x:Key="LightBlueGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#7fd4a8" Offset="0"/>
        <GradientStop Color="#50c878" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado para cards (tema oscuro verde petróleo) -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1a4d4d" Offset="0"/>
        <GradientStop Color="#234e52" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
