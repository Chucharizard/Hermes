<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- TEMA: MORADO / AZUL (ORIGINAL) -->
    <!-- Juvenil, moderno, tecnológico -->
    <!-- ========================================== -->

    <!-- COLORES BASE (para DropShadowEffect y otras propiedades Color) -->
    <Color x:Key="BackgroundDarkestColor">#0d1b2a</Color>
    <Color x:Key="BackgroundDarkColor">#1b263b</Color>
    <Color x:Key="BackgroundMediumColor">#415a77</Color>
    <Color x:Key="PrimaryColorValue">#5DADE2</Color>
    <Color x:Key="PrimaryDarkColorValue">#3498DB</Color>
    <Color x:Key="SuccessColorValue">#1ABC9C</Color>
    <Color x:Key="InfoColorValue">#3498DB</Color>
    <Color x:Key="WarningColorValue">#F39C12</Color>
    <Color x:Key="DangerColorValue">#E74C3C</Color>

    <!-- Fondos Oscuros (Azul Medianoche) -->
    <SolidColorBrush x:Key="BackgroundDarkest" Color="{StaticResource BackgroundDarkestColor}"/>
    <SolidColorBrush x:Key="BackgroundDark" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="BackgroundMedium" Color="{StaticResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="BackgroundCharcoal" Color="#2d3748"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#ECF0F1"/>
    <SolidColorBrush x:Key="BackgroundLightColor" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="BackgroundGrayColor" Color="#E9ECEF"/>

    <!-- Morado/Azul (Color principal - Acentos) -->
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource PrimaryColorValue}"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="{StaticResource PrimaryDarkColorValue}"/>
    <SolidColorBrush x:Key="PrimaryDeeperColor" Color="#2874A6"/>    <!-- Azul profundo -->
    <SolidColorBrush x:Key="PrimaryLightColor" Color="#85C1E9"/>     <!-- Azul claro -->

    <!-- Colores de acción -->
    <SolidColorBrush x:Key="InfoColor" Color="#5DADE2"/>             <!-- Azul principal -->
    <SolidColorBrush x:Key="InfoHoverColor" Color="#3498DB"/>        <!-- Azul hover -->
    <SolidColorBrush x:Key="SuccessColor" Color="#1ABC9C"/>          <!-- Turquesa -->
    <SolidColorBrush x:Key="SuccessHoverColor" Color="#148F77"/>     <!-- Turquesa oscuro -->
    <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>          <!-- Naranja -->
    <SolidColorBrush x:Key="WarningHoverColor" Color="#D68910"/>     <!-- Naranja oscuro -->
    <SolidColorBrush x:Key="DangerColor" Color="#E74C3C"/>           <!-- Rojo -->
    <SolidColorBrush x:Key="DangerHoverColor" Color="#C0392B"/>      <!-- Rojo oscuro -->

    <!-- Colores oscuros para sidebar -->
    <SolidColorBrush x:Key="DarkColor" Color="#1b263b"/>             <!-- Azul oscuro -->
    <SolidColorBrush x:Key="DarkHoverColor" Color="#0d1b2a"/>        <!-- Azul muy oscuro -->
    <SolidColorBrush x:Key="SidebarColor" Color="#1b263b"/>          <!-- Azul oscuro -->

    <!-- Textos (mejorado para contraste) -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#FFFFFF"/>      <!-- Blanco puro para fondos oscuros -->
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#e0e1dd"/>    <!-- Gris muy claro -->
    <SolidColorBrush x:Key="TextMutedColor" Color="#778da9"/>        <!-- Azul grisáceo -->
    <SolidColorBrush x:Key="TextDarkColor" Color="#0d1b2a"/>         <!-- Texto oscuro para fondos claros -->
    <SolidColorBrush x:Key="TextAccentColor" Color="#5DADE2"/>       <!-- Texto con acento (azul principal) -->
    <SolidColorBrush x:Key="TextSuccessColor" Color="#1ABC9C"/>      <!-- Texto éxito (turquesa) -->
    <SolidColorBrush x:Key="TextDangerColor" Color="#E74C3C"/>       <!-- Texto peligro (rojo) -->

    <!-- Bordes -->
    <SolidColorBrush x:Key="BorderColor" Color="#415a77"/>           <!-- Azul medio para bordes -->
    <SolidColorBrush x:Key="BorderLightColor" Color="#778da9"/>      <!-- Azul grisáceo claro -->

    <!-- ========================================== -->
    <!-- DEGRADADOS MODERNOS -->
    <!-- ========================================== -->

    <!-- Degradado principal (azul vibrante) -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#5DADE2" Offset="0"/>
        <GradientStop Color="#3498DB" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientVertical" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#5DADE2" Offset="0"/>
        <GradientStop Color="#3498DB" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado oscuro (fondos principales) -->
    <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#0d1b2a" Offset="0"/>
        <GradientStop Color="#1b263b" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkGradientVertical" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0d1b2a" Offset="0"/>
        <GradientStop Color="#1b263b" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado sidebar (azul oscuro) -->
    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1b263b" Offset="0"/>
        <GradientStop Color="#0d1b2a" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado medio (azul medio) -->
    <LinearGradientBrush x:Key="MediumGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#415a77" Offset="0"/>
        <GradientStop Color="#778da9" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado éxito (turquesa) -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1ABC9C" Offset="0"/>
        <GradientStop Color="#148F77" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado azul profundo -->
    <LinearGradientBrush x:Key="DeepBlueGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1b263b" Offset="0"/>
        <GradientStop Color="#0d1b2a" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado azul claro -->
    <LinearGradientBrush x:Key="LightBlueGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#85C1E9" Offset="0"/>
        <GradientStop Color="#5DADE2" Offset="1"/>
    </LinearGradientBrush>

    <!-- Degradado para cards (tema oscuro morado medianoche) -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1a1a2e" Offset="0"/>
        <GradientStop Color="#16213e" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
