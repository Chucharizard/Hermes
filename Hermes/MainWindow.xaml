<Window x:Class="Hermes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
        Title="Sistema HERMES - Panel Broker"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundDarkest}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <!-- Los recursos (estilos y converters) se heredan automáticamente de Application.Resources -->

    <!-- Contenedor principal con bordes redondeados -->
    <Border Background="{DynamicResource BackgroundDarkest}" CornerRadius="0" BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="0">
        <Grid TextOptions.TextFormattingMode="Display"
              TextOptions.TextRenderingMode="ClearType"
              UseLayoutRounding="True"
              SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Barra de título personalizada -->
                <RowDefinition Height="*"/> <!-- Contenido principal -->
            </Grid.RowDefinitions>

            <!-- ========================================== -->
            <!-- BARRA DE TÍTULO PERSONALIZADA -->
            <!-- ========================================== -->
            <Border Grid.Row="0"
                    Background="{DynamicResource BackgroundDarkest}"
                    CornerRadius="0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo y Título -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                        <Border Background="{DynamicResource PrimaryColor}" CornerRadius="6" Padding="6" Margin="0,0,10,0">
                            <TextBlock Text="🏢" FontSize="16"/>
                        </Border>
                        <TextBlock Text="HERMES"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryColor}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="|"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextMutedColor}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Sistema de Gestión"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextMutedColor}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Botones de control de ventana -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Minimizar -->
                        <Button Content="─"
                                Click="MinimizeButton_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Background="Transparent"
                                Foreground="{DynamicResource TextMutedColor}"
                                Width="40"
                                Height="40"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource BackgroundMedium}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Maximizar/Restaurar -->
                        <Button x:Name="MaximizeButton"
                                Content="▢"
                                Click="MaximizeButton_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Background="Transparent"
                                Foreground="{DynamicResource TextMutedColor}"
                                Width="40"
                                Height="40"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource BackgroundMedium}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Cerrar -->
                        <Button Content="✖"
                                Click="CloseButton_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Background="Transparent"
                                Foreground="{DynamicResource TextMutedColor}"
                                Width="40"
                                Height="40"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#c45c4d"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- CONTENIDO PRINCIPAL -->
            <!-- ========================================== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding AnchoSidebar}"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
            <!-- Sidebar Menu con degradado vertical morado medianoche -->
            <Border x:Name="SidebarBorder" Grid.Column="0" Padding="0,20"
                    Background="{DynamicResource BackgroundDarkest}">
                <StackPanel>
                    <!-- Botón Hamburguesa -->
                    <Button Content="☰"
                            Command="{Binding ToggleSidebarCommand}"
                            Style="{StaticResource HamburgerButtonStyle}"
                            Margin="10,0,10,15"
                            HorizontalAlignment="Left"/>

                    <!-- Logo y Título (ocultar cuando está colapsado) -->
                    <StackPanel Margin="15,0,15,20">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="🏢 HERMES"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Panel de Administración"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryColor}"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>

                    <!-- Información del Usuario (ocultar cuando está colapsado) -->
                    <Border CornerRadius="12"
                            Padding="15"
                            Margin="10,0,10,15"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4" Color="{DynamicResource BackgroundDarkestColor}"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource SidebarGradient}"/>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="{Binding NombreUsuarioActual}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <TextBlock FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryColor}"
                                       TextAlignment="Center">
                                <Run Text="("/><Run Text="{Binding RolUsuario, Mode=OneWay}"/><Run Text=")"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Botón Cerrar Sesión -->
                    <Button Command="{Binding CerrarSesionCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            Padding="12,10"
                            Margin="10,0,10,20"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🚪" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Cerrar Sesión" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador -->
                    <Separator Margin="10,0,10,15" Background="{DynamicResource BackgroundMedium}" Height="1" Opacity="0.5"/>

                    <!-- Opciones de administración (solo Broker) -->
                    <Button Command="{Binding MostrarDashboardCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Dashboard" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MostrarGestionEmpleadosCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Gestion de Empleados" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MostrarGestionTareasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Gestion de Tareas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador para sección de Bandejas (visible solo si hay opciones arriba O si puede enviar tareas) -->
                    <Separator Margin="10,15" Background="{DynamicResource BackgroundMedium}" Height="1" Opacity="0.5"
                               Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <TextBlock Text="BANDEJAS DE TAREAS"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="15,5,15,10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Tareas Enviadas - solo para Broker, Secretaria y Abogada/Abogado -->
                    <Button Command="{Binding MostrarBandejaTareasEnviadasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding PuedeEnviarTareas, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tareas Enviadas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Tareas Recibidas - para TODOS los roles -->
                    <Button Command="{Binding MostrarBandejaTareasRecibidasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tareas Recibidas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador para sección de Tema -->
                    <Separator Margin="10,15" Background="{DynamicResource BackgroundMedium}" Height="1" Opacity="0.5"/>

                    <!-- Selector de Tema -->
                    <StackPanel Margin="10,10,10,15">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="🎨 TEMA"
                                   Foreground="{DynamicResource TextSecondaryColor}"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Margin="5,0,0,10"/>

                        <ComboBox x:Name="ThemeComboBox"
                                  SelectionChanged="ThemeComboBox_SelectionChanged"
                                  SelectedIndex="0"
                                  FontSize="13"
                                  Height="35">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="{DynamicResource BackgroundDark}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                  Grid.Column="0"
                                                                  Focusable="false"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="6">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <ContentPresenter Grid.Column="0"
                                                                                        Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                                        ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                                        Margin="10,5"
                                                                                        VerticalAlignment="Center"
                                                                                        HorizontalAlignment="Left"/>
                                                                        <TextBlock Grid.Column="1"
                                                                                 Text="▼"
                                                                                 FontSize="10"
                                                                                 Foreground="{DynamicResource PrimaryColor}"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,10,0"/>
                                                                    </Grid>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                        <ToggleButton.Style>
                                                            <Style TargetType="ToggleButton">
                                                                <Setter Property="Background" Value="{DynamicResource BackgroundDark}"/>
                                                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="{DynamicResource BackgroundMedium}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ToggleButton.Style>
                                                    </ToggleButton>
                                                    <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                        <Border Background="{DynamicResource BackgroundDark}"
                                                                BorderBrush="{DynamicResource PrimaryColor}"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                Margin="0,5,0,0"
                                                                MinWidth="{TemplateBinding ActualWidth}">
                                                            <ScrollViewer MaxHeight="200">
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="{DynamicResource BackgroundDark}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource BackgroundMedium}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBoxItem Content="🌿 Verde Esmeralda" Tag="Emerald"/>
                            <ComboBoxItem Content="💜 Morado Azul" Tag="Purple"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Main Content Area con tema morado medianoche -->
            <Grid x:Name="MainContentGrid" Grid.Column="1"
                  Background="{DynamicResource BackgroundDiagonalGradient}">

                <!-- Elementos decorativos de fondo -->
                <Canvas IsHitTestVisible="False">
                    <!-- Círculo decorativo superior derecha -->
                    <Ellipse Width="300" Height="300"
                             Canvas.Right="-150" Canvas.Top="-150"
                             Fill="#155DADE2"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       From="1" To="1.15" Duration="0:0:8">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       From="1" To="1.15" Duration="0:0:8">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Círculo decorativo inferior izquierda -->
                    <Ellipse Width="250" Height="250"
                             Canvas.Left="-125" Canvas.Bottom="-125"
                             Fill="#203498DB"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       From="1" To="1.2" Duration="0:0:10"
                                                       BeginTime="0:0:2">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       From="1" To="1.2" Duration="0:0:10"
                                                       BeginTime="0:0:2">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Círculo decorativo central derecha -->
                    <Ellipse Width="200" Height="200"
                             Canvas.Right="-100"
                             Canvas.Top="250"
                             Fill="#10778da9"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       From="1" To="1.3" Duration="0:0:12"
                                                       BeginTime="0:0:1">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       From="1" To="1.3" Duration="0:0:12"
                                                       BeginTime="0:0:1">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>

                <ContentControl Content="{Binding CurrentView}"
                              Margin="15"
                              Panel.ZIndex="1"/>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</Window>
