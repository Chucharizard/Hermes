<Window x:Class="Hermes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
        Title="Sistema HERMES - Panel Broker"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#0a0a15">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para botones hamburguesa -->
        <Style x:Key="HamburgerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a4a5e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo adaptable para botones del menú del sidebar -->
        <Style x:Key="AdaptiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5,0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Contenedor principal con bordes redondeados -->
    <Border Background="#0a0a15" CornerRadius="0" BorderBrush="#9B59B6" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Barra de título personalizada -->
                <RowDefinition Height="*"/> <!-- Contenido principal -->
            </Grid.RowDefinitions>

            <!-- ========================================== -->
            <!-- BARRA DE TÍTULO PERSONALIZADA -->
            <!-- ========================================== -->
            <Border Grid.Row="0"
                    Background="#0d1b2a"
                    CornerRadius="0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo y Título -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                        <Border Background="#9B59B6" CornerRadius="6" Padding="6" Margin="0,0,10,0">
                            <TextBlock Text="🏢" FontSize="16"/>
                        </Border>
                        <TextBlock Text="HERMES"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#FFFFFF"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="|"
                                   FontSize="14"
                                   Foreground="#95A5A6"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Sistema de Gestión"
                                   FontSize="12"
                                   Foreground="#95A5A6"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Botones de control de ventana -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Minimizar -->
                        <Button Content="─"
                                Click="MinimizeButton_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Background="Transparent"
                                Foreground="#95A5A6"
                                Width="40"
                                Height="40"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2d3748"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Maximizar/Restaurar -->
                        <Button x:Name="MaximizeButton"
                                Content="▢"
                                Click="MaximizeButton_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Background="Transparent"
                                Foreground="#95A5A6"
                                Width="40"
                                Height="40"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2d3748"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Cerrar -->
                        <Button Content="✖"
                                Click="CloseButton_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Background="Transparent"
                                Foreground="#95A5A6"
                                Width="40"
                                Height="40"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- CONTENIDO PRINCIPAL -->
            <!-- ========================================== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding AnchoSidebar}"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
            <!-- Sidebar Menu con degradado vertical morado medianoche -->
            <Border Grid.Column="0" Padding="0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0d1b2a" Offset="0"/>
                        <GradientStop Color="#0a0a15" Offset="0.5"/>
                        <GradientStop Color="#0d1b2a" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <!-- Botón Hamburguesa -->
                    <Button Content="☰"
                            Command="{Binding ToggleSidebarCommand}"
                            Style="{StaticResource HamburgerButtonStyle}"
                            Margin="10,0,10,15"
                            HorizontalAlignment="Left"/>

                    <!-- Logo y Título (ocultar cuando está colapsado) -->
                    <StackPanel Margin="15,0,15,20">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="🏢 HERMES"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Panel de Administración"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#B0B8C8"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>

                    <!-- Información del Usuario (ocultar cuando está colapsado) -->
                    <Border CornerRadius="12"
                            Padding="15"
                            Margin="10,0,10,15"
                            BorderBrush="#30FFFFFF"
                            BorderThickness="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1a1a2e" Offset="0"/>
                                <GradientStop Color="#16213e" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="{Binding NombreUsuarioActual}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <TextBlock FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#5DADE2"
                                       TextAlignment="Center">
                                <Run Text="("/><Run Text="{Binding RolUsuario, Mode=OneWay}"/><Run Text=")"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Botón Cerrar Sesión -->
                    <Button Command="{Binding CerrarSesionCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            Padding="12,10"
                            Margin="10,0,10,20"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🚪" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Cerrar Sesión" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador -->
                    <Separator Margin="10,0,10,15" Background="#3a4a5e" Height="1" Opacity="0.5"/>

                    <!-- Opciones de administración (solo Broker) -->
                    <Button Command="{Binding MostrarDashboardCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Dashboard" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MostrarGestionEmpleadosCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Gestion de Empleados" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MostrarGestionTareasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Gestion de Tareas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador para sección de Bandejas (visible solo si hay opciones arriba O si puede enviar tareas) -->
                    <Separator Margin="10,15" Background="#3a4a5e" Height="1" Opacity="0.5"
                               Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <TextBlock Text="BANDEJAS DE TAREAS"
                               Foreground="#B0B8C8"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="15,5,15,10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Tareas Enviadas - solo para Broker, Secretaria y Abogada/Abogado -->
                    <Button Command="{Binding MostrarBandejaTareasEnviadasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding PuedeEnviarTareas, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tareas Enviadas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Tareas Recibidas - para TODOS los roles -->
                    <Button Command="{Binding MostrarBandejaTareasRecibidasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tareas Recibidas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Main Content Area con tema morado medianoche -->
            <Grid Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0a0a15" Offset="0"/>
                        <GradientStop Color="#1a1a2e" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <!-- Elementos decorativos de fondo -->
                <Canvas IsHitTestVisible="False">
                    <!-- Círculo decorativo superior derecha -->
                    <Ellipse Width="300" Height="300"
                             Canvas.Right="-150" Canvas.Top="-150"
                             Fill="#155DADE2"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       From="1" To="1.15" Duration="0:0:8">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       From="1" To="1.15" Duration="0:0:8">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Círculo decorativo inferior izquierda -->
                    <Ellipse Width="250" Height="250"
                             Canvas.Left="-125" Canvas.Bottom="-125"
                             Fill="#203498DB"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       From="1" To="1.2" Duration="0:0:10"
                                                       BeginTime="0:0:2">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       From="1" To="1.2" Duration="0:0:10"
                                                       BeginTime="0:0:2">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Círculo decorativo central derecha -->
                    <Ellipse Width="200" Height="200"
                             Canvas.Right="-100"
                             Canvas.Top="250"
                             Fill="#10778da9"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       From="1" To="1.3" Duration="0:0:12"
                                                       BeginTime="0:0:1">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       From="1" To="1.3" Duration="0:0:12"
                                                       BeginTime="0:0:1">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>

                <ContentControl Content="{Binding CurrentView}"
                              Margin="15"
                              Panel.ZIndex="1"/>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</Window>
