<Window x:Class="Hermes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
        Title="Sistema HERMES - Panel Broker" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para botones hamburguesa -->
        <Style x:Key="HamburgerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#415a77"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo adaptable para botones del menú del sidebar -->
        <Style x:Key="AdaptiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5,0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding AnchoSidebar}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar Menu con degradado vertical (Nueva paleta) -->
            <Border Grid.Column="0" Padding="0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1b263b" Offset="0"/>
                        <GradientStop Color="#0d1b2a" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <!-- Botón Hamburguesa -->
                    <Button Content="☰"
                            Command="{Binding ToggleSidebarCommand}"
                            Style="{StaticResource HamburgerButtonStyle}"
                            Margin="10,0,10,15"
                            HorizontalAlignment="Left"/>

                    <!-- Logo y Título (ocultar cuando está colapsado) -->
                    <StackPanel Margin="15,0,15,20">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="🏢 HERMES"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Panel de Administración"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Información del Usuario (ocultar cuando está colapsado) -->
                    <Border Background="#2C3E50"
                            CornerRadius="8"
                            Padding="15"
                            Margin="10,0,10,15">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="{Binding NombreUsuarioActual}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <TextBlock FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#5DADE2"
                                       TextAlignment="Center">
                                <Run Text="("/><Run Text="{Binding RolUsuario, Mode=OneWay}"/><Run Text=")"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Botón Cerrar Sesión -->
                    <Button Command="{Binding CerrarSesionCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            Padding="12,10"
                            Margin="10,0,10,20"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🚪" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Cerrar Sesión" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador -->
                    <Separator Margin="10,0,10,15" Background="#415a77" Height="2"/>

                    <!-- Opciones de administración (solo Broker) -->
                    <Button Command="{Binding MostrarDashboardCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Dashboard" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MostrarGestionEmpleadosCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Gestion de Empleados" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MostrarGestionTareasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Gestion de Tareas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Separador para sección de Bandejas (visible solo si hay opciones arriba O si puede enviar tareas) -->
                    <Separator Margin="10,15" Background="#7F8C8D" Height="1"
                               Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <TextBlock Text="BANDEJAS DE TAREAS"
                               Foreground="#95A5A6"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="15,5,15,10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Tareas Enviadas - solo para Broker, Secretaria y Abogada/Abogado -->
                    <Button Command="{Binding MostrarBandejaTareasEnviadasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding PuedeEnviarTareas, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tareas Enviadas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Tareas Recibidas - para TODOS los roles -->
                    <Button Command="{Binding MostrarBandejaTareasRecibidasCommand}"
                            Style="{StaticResource AdaptiveMenuButtonStyle}"
                            Margin="10,5"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tareas Recibidas" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SidebarColapsado}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Main Content Area con degradado moderno -->
            <Border Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#e0e1dd" Offset="0"/>
                        <GradientStop Color="#d4d5d0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <ContentControl Content="{Binding CurrentView}"
                              Margin="20"/>
            </Border>
    </Grid>
</Window>
