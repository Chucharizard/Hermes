<Window x:Class="Hermes.Views.EditarTareaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Editar Tarea"
        Height="700" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Border Width="600" Background="White"
                CornerRadius="10"
                Padding="40"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Editar Tarea"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Titulo -->
                    <TextBlock Text="Titulo:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Tarea.TituloTarea, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>

                    <!-- Descripcion -->
                    <TextBlock Text="Descripcion:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Tarea.DescripcionTarea, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             FontSize="14"
                             Padding="10,5"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Usuario Emisor -->
                    <TextBlock Text="Usuario Emisor:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Usuarios}"
                              SelectedItem="{Binding UsuarioEmisorSeleccionado}"
                              DisplayMemberPath="NombreUsuario"
                              Height="35"
                              FontSize="14"
                              Margin="0,0,0,15"/>

                    <!-- Usuario Receptor -->
                    <TextBlock Text="Usuario Receptor:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Usuarios}"
                              SelectedItem="{Binding UsuarioReceptorSeleccionado}"
                              DisplayMemberPath="NombreUsuario"
                              Height="35"
                              FontSize="14"
                              Margin="0,0,0,15"/>

                    <!-- Grid para Estado y Prioridad -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Estado -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Estado:"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Estados}"
                                      SelectedItem="{Binding EstadoSeleccionado}"
                                      Height="35"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Prioridad -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Prioridad:"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Prioridades}"
                                      SelectedItem="{Binding PrioridadSeleccionada}"
                                      Height="35"
                                      FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Grid para Fechas -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fecha Inicio -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Fecha Inicio:"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding Tarea.FechaInicioTarea}"
                                        Height="35"
                                        FontSize="14"/>
                        </StackPanel>

                        <!-- Fecha Limite -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Fecha Limite (opcional):"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding Tarea.FechaLimiteTarea}"
                                        Height="35"
                                        FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Mensaje de Error -->
                    <Border Background="#FFEBEE"
                            CornerRadius="4"
                            Padding="10,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding MensajeError}"
                                   Foreground="#C62828"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Botones -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Cancelar"
                                Command="{Binding CancelarCommand}"
                                Height="40"
                                Background="#95A5A6"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="0,0,5,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7F8C8D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="1"
                                Content="Actualizar Tarea"
                                Command="{Binding ActualizarCommand}"
                                Height="40"
                                Background="#F39C12"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="5,0,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E67E22"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
