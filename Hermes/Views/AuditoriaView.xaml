<UserControl x:Class="Hermes.Views.AuditoriaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels">

    <UserControl.DataContext>
        <viewmodels:AuditoriaViewModel/>
    </UserControl.DataContext>

    <Grid TextOptions.TextFormattingMode="Display"
          TextOptions.TextRenderingMode="ClearType"
          UseLayoutRounding="True"
          SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundDarkest}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.4" Color="{DynamicResource BackgroundDarkestColor}"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <Border Background="{DynamicResource PrimaryColor}" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                    <TextBlock Text="游댌" FontSize="20"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Auditor칤a del Sistema"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryColor}"/>
                    <TextBlock Text="Registro completo de actividades y eventos del sistema"
                               FontSize="11"
                               Foreground="#95A5A6"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Filtros de fecha -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundDarkest}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Fecha Inicio -->
                <TextBlock Grid.Column="0" Text="Desde:" VerticalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryColor}" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding FechaInicio}"
                            Margin="0,0,20,0" Height="35" FontSize="13"
                            Background="{DynamicResource BackgroundDark}"
                            Foreground="{DynamicResource TextPrimaryColor}"/>

                <!-- Fecha Fin -->
                <TextBlock Grid.Column="2" Text="Hasta:" VerticalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryColor}" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding FechaFin}"
                            Margin="0,0,20,0" Height="35" FontSize="13"
                            Background="{DynamicResource BackgroundDark}"
                            Foreground="{DynamicResource TextPrimaryColor}"/>

                <!-- Bot칩n Filtrar -->
                <Button Grid.Column="4" Command="{Binding FiltrarPorFechaCommand}"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="White"
                        Padding="20,8"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3" Color="{DynamicResource PrimaryColorValue}"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2E86AB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="游댌" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Filtrar" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido con Tabs -->
        <TabControl Grid.Row="2"
                    Background="Transparent"
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource BackgroundDark}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="0,0,0,2"
                                        Padding="20,12"
                                        Margin="0,0,5,0"
                                        CornerRadius="8,8,0,0">
                                    <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundDarkest}"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundDarkest}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Tab 1: Auditor칤a de Sesiones (Login/Logout) -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="游댏" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Sesiones" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryColor}"/>
                    </StackPanel>
                </TabItem.Header>
                <Border Background="{DynamicResource BackgroundDarkest}" CornerRadius="0,10,10,10" Padding="15">
                    <DataGrid ItemsSource="{Binding AuditoriaSesion}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              RowBackground="{DynamicResource BackgroundDark}"
                              AlternatingRowBackground="{DynamicResource BackgroundDarkest}"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              SelectionMode="Single">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#FFFFFF40"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaHora, StringFormat='dd/MM/yyyy HH:mm:ss'}" Width="150"/>
                            <DataGridTextColumn Header="Evento" Binding="{Binding TipoEvento}" Width="100"/>
                            <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario.NombreUsuario}" Width="150"/>
                            <DataGridTextColumn Header="CI Empleado" Binding="{Binding CiEmpleado}" Width="120"/>
                            <DataGridTextColumn Header="Nombre Empleado" Binding="{Binding Empleado.NombresEmpleado}" Width="200"/>
                            <DataGridTextColumn Header="M치quina" Binding="{Binding NombreMaquina}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Tab 2: Auditor칤a de Empleados/Usuarios -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="游논" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Empleados/Usuarios" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryColor}"/>
                    </StackPanel>
                </TabItem.Header>
                <Border Background="{DynamicResource BackgroundDarkest}" CornerRadius="0,10,10,10" Padding="15">
                    <DataGrid ItemsSource="{Binding AuditoriaEmpleadoUsuario}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              RowBackground="{DynamicResource BackgroundDark}"
                              AlternatingRowBackground="{DynamicResource BackgroundDarkest}"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              SelectionMode="Single">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#FFFFFF40"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaHora, StringFormat='dd/MM/yyyy HH:mm:ss'}" Width="150"/>
                            <DataGridTextColumn Header="Tabla" Binding="{Binding TablaAfectada}" Width="120"/>
                            <DataGridTextColumn Header="Acci칩n" Binding="{Binding Accion}" Width="100"/>
                            <DataGridTextColumn Header="Usuario Modificador" Binding="{Binding UsuarioModificador.NombreUsuario}" Width="150"/>
                            <DataGridTextColumn Header="CI Modificador" Binding="{Binding CiModificador}" Width="120"/>
                            <DataGridTextColumn Header="CI Afectado" Binding="{Binding CiEmpleadoAfectado}" Width="120"/>
                            <DataGridTextColumn Header="M치quina" Binding="{Binding NombreMaquina}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Tab 3: Auditor칤a de Tareas -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="游늶" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Tareas" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryColor}"/>
                    </StackPanel>
                </TabItem.Header>
                <Border Background="{DynamicResource BackgroundDarkest}" CornerRadius="0,10,10,10" Padding="15">
                    <DataGrid ItemsSource="{Binding AuditoriaTarea}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              RowBackground="{DynamicResource BackgroundDark}"
                              AlternatingRowBackground="{DynamicResource BackgroundDarkest}"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              SelectionMode="Single">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#FFFFFF40"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaHora, StringFormat='dd/MM/yyyy HH:mm:ss'}" Width="150"/>
                            <DataGridTextColumn Header="Acci칩n" Binding="{Binding Accion}" Width="100"/>
                            <DataGridTextColumn Header="Usuario Modificador" Binding="{Binding UsuarioModificador.NombreUsuario}" Width="150"/>
                            <DataGridTextColumn Header="CI Modificador" Binding="{Binding CiModificador}" Width="120"/>
                            <DataGridTextColumn Header="Tarea ID" Binding="{Binding TareaId}" Width="250"/>
                            <DataGridTextColumn Header="M치quina" Binding="{Binding NombreMaquina}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
