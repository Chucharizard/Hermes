<UserControl x:Class="Hermes.Views.NuevoEmpleadoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:helpers="clr-namespace:Hermes.Helpers">

    <UserControl.DataContext>
        <viewmodels:NuevoEmpleadoViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="➕ Registrar Nuevo Empleado"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#ECF0F1"
                   Margin="0,0,0,30"/>

        <!-- CI -->
        <TextBlock Text="Cédula de Identidad (CI):" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Empleado.CiEmpleado, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,15"/>

        <!-- Nombres -->
        <TextBlock Text="Nombres:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Empleado.NombresEmpleado, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,15"/>

        <!-- Apellidos -->
        <TextBlock Text="Apellidos:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Empleado.ApellidosEmpleado, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,15"/>

        <!-- Teléfono -->
        <TextBlock Text="Teléfono:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Empleado.TelefonoEmpleado, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,15"/>

        <!-- Correo -->
        <TextBlock Text="Correo Electrónico:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Empleado.CorreoEmpleado, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,15"/>

        <!-- Activo -->
        <CheckBox Content="Empleado Activo"
                  IsChecked="{Binding Empleado.EsActivoEmpleado}"
                  FontSize="12"
                  Foreground="#BDC3C7"
                  Margin="0,0,0,20"/>

        <!-- Mensaje de Error -->
        <Border Background="#3a1f1f"
                BorderBrush="#E74C3C"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10,8"
                Margin="0,0,0,15"
                Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding MensajeError}"
                       Foreground="#E74C3C"
                       FontSize="11"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Botones -->
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancelar"
                    Command="{Binding CancelarCommand}"
                    Style="{StaticResource WarningButtonStyle}"
                    Padding="15,10"
                    Margin="0,0,5,0"/>

            <Button Grid.Column="1"
                    Content="Guardar Empleado"
                    Command="{Binding GuardarCommand}"
                    Style="{StaticResource SuccessButtonStyle}"
                    Padding="15,10"
                    Margin="5,0,0,0"/>
        </Grid>
    </StackPanel>
</UserControl>
