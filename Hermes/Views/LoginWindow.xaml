<Window x:Class="Hermes.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Login - Sistema HERMES"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <viewmodels:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="20" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="5" Opacity="0.4" Color="#0d1b2a"/>
        </Border.Effect>

        <!-- AnimaciÃ³n de entrada -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                       From="0" To="1" Duration="0:0:0.6">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                       From="0.95" To="1" Duration="0:0:0.6">
                            <DoubleAnimation.EasingFunction>
                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                       From="0.95" To="1" Duration="0:0:0.6">
                            <DoubleAnimation.EasingFunction>
                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.RenderTransformOrigin>
            <Point X="0.5" Y="0.5"/>
        </Border.RenderTransformOrigin>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Branding (Nueva paleta oscura) -->
            <Border Grid.Column="0" CornerRadius="20,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1b263b" Offset="0"/>
                        <GradientStop Color="#0d1b2a" Offset="0.5"/>
                        <GradientStop Color="#1b263b" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="40">
                        <!-- Logo / Icono con efecto glassmorphism -->
                        <Border Width="120" Height="120"
                                CornerRadius="60"
                                Margin="0,0,0,30"
                                Background="#20FFFFFF"
                                BorderBrush="#40FFFFFF"
                                BorderThickness="2"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#5DADE2"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="5" Duration="0:0:3">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <TextBlock Text="ðŸ¢"
                                       FontSize="60"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="SISTEMA HERMES"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="GestiÃ³n de Tareas y Empleados"
                                   FontSize="16"
                                   Foreground="#e0e1dd"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,30"
                                   Opacity="0.9"/>

                        <!-- Panel de caracterÃ­sticas con glassmorphism -->
                        <Border BorderBrush="#60FFFFFF"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="20,15"
                                Background="#15FFFFFF">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Foreground="White"
                                           FontSize="14"
                                           Margin="0,5"
                                           Opacity="0">
                                    <Run Text="âœ“" FontWeight="Bold" Foreground="#5DADE2"/>
                                    <Run Text=" Control de tareas"/>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="0" To="1" Duration="0:0:0.5"
                                                                   BeginTime="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>
                                <TextBlock Foreground="White"
                                           FontSize="14"
                                           Margin="0,5"
                                           Opacity="0">
                                    <Run Text="âœ“" FontWeight="Bold" Foreground="#5DADE2"/>
                                    <Run Text=" GestiÃ³n de empleados"/>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="0" To="1" Duration="0:0:0.5"
                                                                   BeginTime="0:0:0.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>
                                <TextBlock Foreground="White"
                                           FontSize="14"
                                           Margin="0,5"
                                           Opacity="0">
                                    <Run Text="âœ“" FontWeight="Bold" Foreground="#5DADE2"/>
                                    <Run Text=" Reportes en Excel"/>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="0" To="1" Duration="0:0:0.5"
                                                                   BeginTime="0:0:0.7"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel Derecho - Formulario -->
            <Grid Grid.Column="1">
                <!-- BotÃ³n Cerrar -->
                <Button Content="âœ•"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="40" Height="40"
                        Margin="10"
                        Background="Transparent"
                        Foreground="#7F8C8D"
                        BorderThickness="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel VerticalAlignment="Center" Margin="60,0">
                    <TextBlock Text="Bienvenido"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#0d1b2a"
                               Margin="0,0,0,10"
                               Opacity="0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0" To="1" Duration="0:0:0.5"
                                                       BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <TextBlock Text="Inicia sesiÃ³n para continuar"
                               FontSize="16"
                               Foreground="#778da9"
                               Margin="0,0,0,40"
                               Opacity="0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0" To="1" Duration="0:0:0.5"
                                                       BeginTime="0:0:0.4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <!-- CI Empleado -->
                    <TextBlock Text="CI de Empleado"
                               FontSize="13"
                               Foreground="#1b263b"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Border x:Name="CiBorder"
                            BorderBrush="#415a77"
                            BorderThickness="2"
                            CornerRadius="10"
                            Background="#FFFFFF"
                            Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0" Color="#5DADE2"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#5DADE2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <TextBlock Text="ðŸ‘¤"
                                       FontSize="18"
                                       Foreground="#778da9"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                            <TextBox x:Name="CiTextBox"
                                     Text="{Binding CiEmpleado, UpdateSourceTrigger=PropertyChanged}"
                                     Height="50"
                                     FontSize="15"
                                     Padding="45,10,15,10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#0d1b2a"
                                     VerticalContentAlignment="Center"
                                     GotFocus="Input_GotFocus"
                                     LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="ContraseÃ±a"
                               FontSize="13"
                               Foreground="#1b263b"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Border x:Name="PasswordBorder"
                            BorderBrush="#415a77"
                            BorderThickness="2"
                            CornerRadius="10"
                            Background="#FFFFFF"
                            Margin="0,0,0,25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0" Color="#5DADE2"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#5DADE2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <TextBlock Text="ðŸ”’"
                                       FontSize="18"
                                       Foreground="#778da9"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Height="50"
                                         FontSize="15"
                                         Padding="45,10,15,10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#0d1b2a"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"
                                         GotFocus="Input_GotFocus"
                                         LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Border>

                    <!-- Indicador de Intentos -->
                    <Border Background="#FFF3CD"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding MensajeError}"
                                       Foreground="#856404"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,8"/>

                            <!-- Barras de intentos visuales -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,5,0,0">
                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="2">
                                                    <Setter Property="Background" Value="#F39C12"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="1">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="1">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- BotÃ³n Login con efecto moderno -->
                    <Button Content="Iniciar SesiÃ³n"
                            Command="{Binding LoginCommand}"
                            Height="55"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,10,0,0"
                            Cursor="Hand"
                            RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#5DADE2" Offset="0"/>
                                            <GradientStop Color="#3498DB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3" Color="#3498DB"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.02" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.02" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading Indicator con nuevo color -->
                    <ProgressBar IsIndeterminate="True"
                                 Height="4"
                                 Margin="0,15,0,0"
                                 Foreground="#5DADE2"
                                 Background="#e0e1dd"
                                 BorderThickness="0"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
