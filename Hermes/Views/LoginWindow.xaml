                               Margin="0,0,0,8"/>

                    <Border x:Name="PasswordBorder"
                            BorderBrush="{DynamicResource BackgroundMedium}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Background="{DynamicResource BackgroundDarkest}"
                            Margin="0,0,0,25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0" Color="{DynamicResource PrimaryColorValue}"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <TextBlock Text="ðŸ”’"
                                       FontSize="18"
                                       Foreground="{DynamicResource TextMutedColor}"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Height="50"
                                         FontSize="15"
                                         Padding="45,10,15,10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{DynamicResource TextPrimaryColor}"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"
                                         GotFocus="Input_GotFocus"
                                         LostFocus="Input_LostFocus"/>
                        </Grid>
                    </Border>

                    <!-- Indicador de Intentos -->
                    <Border Background="#2a1f1f"
                            BorderBrush="#F39C12"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding MensajeError}"
                                       Foreground="#FDB863"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,8"/>

                            <!-- Barras de intentos visuales -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,5,0,0">
                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="2">
                                                    <Setter Property="Background" Value="#F39C12"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="1">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="1">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- BotÃ³n Login con efecto moderno -->
                    <Button Content="Iniciar SesiÃ³n"
                            Command="{Binding LoginCommand}"
                            Height="55"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,10,0,0"
                            Cursor="Hand"
                            RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3" Color="{DynamicResource PrimaryColorValue}"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.02" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.02" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading Indicator dinÃ¡mico -->
                    <ProgressBar IsIndeterminate="True"
                                 Height="4"
                                 Margin="0,15,0,0"
                                 Foreground="{DynamicResource PrimaryColor}"
                                 Background="{DynamicResource BackgroundDarkest}"
                                 BorderThickness="0"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
