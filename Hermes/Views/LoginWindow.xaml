<Window x:Class="Hermes.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Login - Sistema HERMES"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <viewmodels:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#2C3E50"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Branding -->
            <Border Grid.Column="0" CornerRadius="15,0,0,15"
                    Background="{StaticResource PrimaryGradientVertical}">

                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="40">
                        <!-- Logo / Icono -->
                        <Border Width="120" Height="120"
                                Background="White"
                                CornerRadius="60"
                                Margin="0,0,0,30">
                            <TextBlock Text="ðŸ¢"
                                       FontSize="60"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="SISTEMA HERMES"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="GestiÃ³n de Tareas y Empleados"
                                   FontSize="16"
                                   Foreground="#E0E0E0"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,30"/>

                        <Border BorderBrush="White"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="15"
                                Opacity="0.3">
                            <StackPanel>
                                <TextBlock Text="âœ“ Control de tareas"
                                           Foreground="White"
                                           FontSize="14"
                                           Margin="0,5"/>
                                <TextBlock Text="âœ“ GestiÃ³n de empleados"
                                           Foreground="White"
                                           FontSize="14"
                                           Margin="0,5"/>
                                <TextBlock Text="âœ“ Reportes en Excel"
                                           Foreground="White"
                                           FontSize="14"
                                           Margin="0,5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel Derecho - Formulario -->
            <Grid Grid.Column="1">
                <!-- BotÃ³n Cerrar -->
                <Button Content="âœ•"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="40" Height="40"
                        Margin="10"
                        Background="Transparent"
                        Foreground="#7F8C8D"
                        BorderThickness="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel VerticalAlignment="Center" Margin="60,0">
                    <TextBlock Text="Bienvenido"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Inicia sesiÃ³n para continuar"
                               FontSize="16"
                               Foreground="#7F8C8D"
                               Margin="0,0,0,40"/>

                    <!-- CI Empleado -->
                    <TextBlock Text="CI de Empleado"
                               FontSize="13"
                               Foreground="#34495E"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Border BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="#F8F9FA"
                            Margin="0,0,0,20">
                        <Grid>
                            <TextBlock Text="ðŸ‘¤"
                                       FontSize="18"
                                       Foreground="#95A5A6"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                            <TextBox Text="{Binding CiEmpleado, UpdateSourceTrigger=PropertyChanged}"
                                     Height="45"
                                     FontSize="15"
                                     Padding="45,10,15,10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="ContraseÃ±a"
                               FontSize="13"
                               Foreground="#34495E"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Border BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="#F8F9FA"
                            Margin="0,0,0,25">
                        <Grid>
                            <TextBlock Text="ðŸ”’"
                                       FontSize="18"
                                       Foreground="#95A5A6"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Height="45"
                                         FontSize="15"
                                         Padding="45,10,15,10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                        </Grid>
                    </Border>

                    <!-- Indicador de Intentos -->
                    <Border Background="#FFF3CD"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding MensajeError}"
                                       Foreground="#856404"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,8"/>

                            <!-- Barras de intentos visuales -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,5,0,0">
                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="2">
                                                    <Setter Property="Background" Value="#F39C12"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="1">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="1">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Width="30" Height="6"
                                        CornerRadius="3"
                                        Margin="3,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IntentosRestantes}" Value="0">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- BotÃ³n Login -->
                    <Button Content="Iniciar SesiÃ³n"
                            Command="{Binding LoginCommand}"
                            Height="50"
                            FontSize="16"
                            Margin="0,10,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading Indicator -->
                    <ProgressBar IsIndeterminate="True"
                                 Height="4"
                                 Margin="0,15,0,0"
                                 Foreground="#667eea"
                                 Background="#E0E0E0"
                                 BorderThickness="0"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
