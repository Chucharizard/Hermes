<UserControl x:Class="Hermes.Views.GestionarUsuarioPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:Hermes.Helpers">

    <UserControl.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="ðŸ‘¤ Gestionar Usuario del Empleado"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#ECF0F1"
                   Margin="0,0,0,30"/>

        <Border Background="#16213e"
                Padding="15"
                CornerRadius="5"
                Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Empleado: " FontWeight="Bold" FontSize="14" Foreground="#ECF0F1"/>
                    <TextBlock Text="{Binding EmpleadoNombreCompleto}" FontSize="14" Foreground="#ECF0F1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="CI: " FontSize="12" Foreground="#BDC3C7"/>
                    <TextBlock Text="{Binding Empleado.CiEmpleado}" FontSize="12" Foreground="#BDC3C7"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <TextBlock Text="Nombre de Usuario:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Usuario.NombreUsuario, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,15"/>

        <TextBlock Text="ContraseÃ±a:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox"
                     Height="35"
                     FontSize="14"
                     Padding="10,5"
                     Margin="0,0,0,15"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock Text="Confirmar ContraseÃ±a:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox"
                     Height="35"
                     FontSize="14"
                     Padding="10,5"
                     Margin="0,0,0,15"
                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <TextBlock Text="Rol:" FontSize="12" Foreground="#BDC3C7" Margin="0,0,0,5"/>
        <ComboBox ItemsSource="{Binding Roles}"
                  SelectedItem="{Binding RolSeleccionado}"
                  DisplayMemberPath="NombreRol"
                  Style="{StaticResource ModernComboBoxStyle}"
                  Margin="0,0,0,15"/>

        <CheckBox Content="Usuario Activo"
                  IsChecked="{Binding Usuario.EsActivoUsuario}"
                  FontSize="12"
                  Foreground="#BDC3C7"
                  Margin="0,0,0,20"/>

        <!-- Mensaje de Error -->
        <Border Background="#3a1f1f"
                BorderBrush="#E74C3C"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10,8"
                Margin="0,0,0,15"
                Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding MensajeError}"
                       Foreground="#E74C3C"
                       FontSize="11"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Mensaje de Ã‰xito -->
        <Border Background="#1f3a1f"
                BorderBrush="#1ABC9C"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10,8"
                Margin="0,0,0,15"
                Visibility="{Binding MensajeExito, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding MensajeExito}"
                       Foreground="#1ABC9C"
                       FontSize="11"
                       TextWrapping="Wrap"/>
        </Border>

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancelar"
                    Command="{Binding CancelarCommand}"
                    Style="{StaticResource WarningButtonStyle}"
                    Padding="15,10"
                    Margin="0,0,5,0"/>

            <Button Grid.Column="1"
                    Content="{Binding TextoBotonGuardar}"
                    Command="{Binding GuardarUsuarioCommand}"
                    Style="{StaticResource SuccessButtonStyle}"
                    Padding="15,10"
                    Margin="5,0,0,0"/>
        </Grid>
    </StackPanel>
</UserControl>
