<Window x:Class="Hermes.Views.NuevaTareaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Nueva Tarea"
        Height="850" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.DataContext>
        <viewmodels:NuevaTareaViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Border Width="600" Background="White"
                CornerRadius="10"
                Padding="40"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Nueva Tarea"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Titulo -->
                    <TextBlock Text="Titulo:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Tarea.TituloTarea, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>

                    <!-- Descripcion -->
                    <TextBlock Text="Descripcion:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Tarea.DescripcionTarea, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             FontSize="14"
                             Padding="10,5"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Usuario Emisor (Usuario Logueado) -->
                    <TextBlock Text="Usuario Emisor (TÃº):"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NombreUsuarioEmisor, Mode=OneWay}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             IsReadOnly="True"
                             Background="#ECF0F1"
                             Foreground="#2C3E50"
                             FontWeight="SemiBold"
                             Margin="0,0,0,15"/>

                    <!-- Usuario Receptor (Asignar a) -->
                    <TextBlock Text="Asignar Tarea A:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding UsuariosReceptores}"
                              SelectedItem="{Binding UsuarioReceptorSeleccionado}"
                              DisplayMemberPath="NombreUsuario"
                              Height="35"
                              FontSize="14"
                              Margin="0,0,0,15"/>

                    <!-- Grid para Estado y Prioridad -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Estado -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Estado:"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Estados}"
                                      SelectedItem="{Binding EstadoSeleccionado}"
                                      Height="35"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Prioridad -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Prioridad:"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Prioridades}"
                                      SelectedItem="{Binding PrioridadSeleccionada}"
                                      Height="35"
                                      FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Grid para Fechas -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fecha Inicio -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Fecha y Hora de Inicio:"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding Tarea.FechaInicioTarea}"
                                        Height="35"
                                        FontSize="14"
                                        Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Hora:"
                                               FontSize="10"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding Horas}"
                                              SelectedItem="{Binding HoraInicio}"
                                              Height="30"
                                              FontSize="13"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Minuto:"
                                               FontSize="10"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding Minutos}"
                                              SelectedItem="{Binding MinutoInicio}"
                                              Height="30"
                                              FontSize="13"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Fecha Limite -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Fecha y Hora LÃ­mite (opcional):"
                                       FontSize="12"
                                       Foreground="#34495E"
                                       Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding Tarea.FechaLimiteTarea}"
                                        Height="35"
                                        FontSize="14"
                                        Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Hora:"
                                               FontSize="10"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding Horas}"
                                              SelectedItem="{Binding HoraLimite}"
                                              Height="30"
                                              FontSize="13"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Minuto:"
                                               FontSize="10"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding Minutos}"
                                              SelectedItem="{Binding MinutoLimite}"
                                              Height="30"
                                              FontSize="13"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- Mensaje de Error -->
                    <Border Background="#FFEBEE"
                            CornerRadius="4"
                            Padding="10,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding MensajeError}"
                                   Foreground="#C62828"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Archivos Adjuntos -->
                    <Border Background="#F8F9FA"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="ðŸ“Ž Archivos Adjuntos (Opcional)"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#34495E"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                                        Content="ðŸ“ Seleccionar"
                                        Command="{Binding SeleccionarArchivoCommand}"
                                        Background="#27AE60"
                                        Foreground="White"
                                        Padding="12,6"
                                        FontSize="12"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#229954"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- Lista de archivos seleccionados -->
                            <ItemsControl ItemsSource="{Binding ArchivosPendientes}" MaxHeight="150">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                CornerRadius="4"
                                                Padding="10"
                                                Margin="0,0,0,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="ðŸ“„"
                                                           FontSize="16"
                                                           Margin="0,0,10,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding NombreArchivo}"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               FontSize="12"/>
                                                    <TextBlock Text="{Binding TamaÃ±oTexto}"
                                                               FontSize="10"
                                                               Foreground="#95A5A6"/>
                                                </StackPanel>

                                                <Button Grid.Column="2"
                                                        Content="âœ–"
                                                        Command="{Binding DataContext.EliminarArchivoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#E74C3C"
                                                        Foreground="White"
                                                        Width="25"
                                                        Height="25"
                                                        FontSize="10"
                                                        BorderThickness="0"
                                                        Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="3"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Botones -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Cancelar"
                                Command="{Binding CancelarCommand}"
                                Height="40"
                                Background="#95A5A6"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="0,0,5,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7F8C8D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="1"
                                Content="Crear Tarea"
                                Command="{Binding GuardarCommand}"
                                Height="40"
                                Background="#27AE60"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="5,0,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#229954"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
