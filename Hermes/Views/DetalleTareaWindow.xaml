<Window x:Class="Hermes.Views.DetalleTareaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Detalle de Tarea"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding Tarea.TituloTarea}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Estado: "
                               FontSize="14"
                               Foreground="#ECF0F1"/>
                    <TextBlock Text="{Binding Tarea.EstadoTarea}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#F39C12"
                               Margin="5,0,20,0"/>

                    <TextBlock Text="Prioridad: "
                               FontSize="14"
                               Foreground="#ECF0F1"/>
                    <TextBlock Text="{Binding Tarea.PrioridadTarea}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#E74C3C"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Contenido con Tabs -->
        <TabControl Grid.Row="1" Margin="20,0,20,0" BorderThickness="0" Background="#ECF0F1">
            <TabControl.Resources>
                <!-- Estilo para los tabs -->
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="#BDC3C7"
                                        BorderBrush="#95A5A6"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="8,8,0,0"
                                        Padding="15,10"
                                        Margin="2,0,2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,3,1,0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True"/>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Style>
            </TabControl.Resources>

            <!-- Tab 1: General -->
            <TabItem Header="ðŸ“‹ General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="White" Padding="20" Margin="0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="InformaciÃ³n General de la Tarea"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,20"/>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,15">
                                <TextBlock Text="ðŸ“… Fecha de Inicio" FontWeight="Bold" Foreground="#3498DB" FontSize="13" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Tarea.FechaInicioTarea, StringFormat=dd/MM/yyyy HH:mm}"
                                           FontSize="14"
                                           Foreground="#2C3E50"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,0,0,15">
                                <TextBlock Text="â° Fecha LÃ­mite" FontWeight="Bold" Foreground="#E74C3C" FontSize="13" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Tarea.FechaLimiteTarea, StringFormat=dd/MM/yyyy HH:mm}"
                                           FontSize="14"
                                           Foreground="#2C3E50"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                    Background="#F8F9FA"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“ DescripciÃ³n" FontWeight="Bold" Foreground="#7F8C8D" FontSize="13" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Tarea.DescripcionTarea, TargetNullValue='Sin descripciÃ³n'}"
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               Foreground="#2C3E50"
                                               LineHeight="22"/>
                                </StackPanel>
                            </Border>

                            <!-- SecciÃ³n de reasignaciÃ³n -->
                            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                    Background="#FFF3CD"
                                    BorderBrush="#FFC107"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Visibility="{Binding PuedeReasignar, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="âš  Tarea observada - Reasignar a otro usuario"
                                               FontWeight="Bold"
                                               Foreground="#856404"
                                               FontSize="14"
                                               Margin="0,0,0,10"/>
                                    <ComboBox ItemsSource="{Binding UsuariosReceptores}"
                                              SelectedItem="{Binding NuevoReceptorSeleccionado}"
                                              DisplayMemberPath="Empleado.NombresEmpleado"
                                              Padding="10"
                                              FontSize="14"
                                              Background="White"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: Comentarios -->
            <TabItem Header="{Binding TotalComentarios, StringFormat='ðŸ’¬ Comentarios ({0})'}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="White" Padding="20" Margin="0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Historial de Comentarios"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,20"/>

                            <!-- Lista de comentarios -->
                            <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Comentarios}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8FBFD"
                                                    BorderBrush="#E3F2FD"
                                                    BorderThickness="0,0,0,2"
                                                    CornerRadius="8"
                                                    Padding="15"
                                                    Margin="0,0,0,12">
                                                <StackPanel>
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Avatar -->
                                                        <Border Grid.Column="0"
                                                                Width="36"
                                                                Height="36"
                                                                CornerRadius="18"
                                                                Background="#3498DB"
                                                                VerticalAlignment="Top"
                                                                Margin="0,0,10,0">
                                                            <TextBlock Text="ðŸ‘¤"
                                                                       FontSize="18"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>

                                                        <!-- Usuario -->
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock FontWeight="Bold" Foreground="#2C3E50" FontSize="14">
                                                                <Run Text="{Binding Usuario.Empleado.NombresEmpleado, Mode=OneWay}"/>
                                                                <Run Text=" "/>
                                                                <Run Text="{Binding Usuario.Empleado.ApellidosEmpleado, Mode=OneWay}"/>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding FechaComentario, StringFormat=dd/MM/yyyy HH:mm}"
                                                                       FontSize="11"
                                                                       Foreground="#95A5A6"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Comentario -->
                                                    <TextBlock Text="{Binding Comentario}"
                                                               TextWrapping="Wrap"
                                                               Foreground="#34495E"
                                                               FontSize="13"
                                                               LineHeight="20"
                                                               Margin="46,0,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Agregar nuevo comentario -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="âœ Agregar Comentario"
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               FontSize="14"
                                               Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBox Grid.Row="0"
                                                 Text="{Binding NuevoComentario, UpdateSourceTrigger=PropertyChanged}"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 MinHeight="80"
                                                 Padding="12"
                                                 FontSize="13"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1"
                                                 VerticalScrollBarVisibility="Auto"
                                                 Background="White">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Top">
                                                                        <VisualBrush.Visual>
                                                                            <TextBlock Text="Escribe tu comentario aquÃ­..."
                                                                                       Foreground="#95A5A6"
                                                                                       Padding="12,7,0,0"
                                                                                       FontSize="13"/>
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>

                                        <Button Grid.Row="1"
                                                Content="ðŸ“¤ Enviar Comentario"
                                                Command="{Binding AgregarComentarioCommand}"
                                                Background="#3498DB"
                                                Foreground="White"
                                                Padding="15,10"
                                                Margin="0,10,0,0"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                HorizontalAlignment="Right">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="6"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2980B9"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#BDC3C7"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 3: Adjuntos -->
            <TabItem Header="{Binding TotalAdjuntosEmisor, StringFormat='ðŸ“Ž Adjuntos ({0})'}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="White" Padding="20" Margin="0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Columna Emisor -->
                            <StackPanel Grid.Column="0">
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#E67E22"
                                            CornerRadius="8"
                                            Padding="12">
                                        <TextBlock Text="{Binding TotalAdjuntosEmisor, StringFormat='ðŸ“¤ Archivos del Emisor ({0})'}"
                                                   FontSize="15"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>

                            <!-- Lista de archivos del emisor -->
                            <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding AdjuntosEmisor}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FEF5E7" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="18" Margin="0,0,8,0"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding NombreArchivo}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#2C3E50"
                                                                   FontSize="12"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding NombreArchivo}"/>
                                                    </Grid>

                                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="26,5,0,5">
                                                        <TextBlock Text="{Binding TamaÃ±oArchivo, StringFormat={}{0:N0} bytes}"
                                                                   FontSize="10"
                                                                   Foreground="#95A5A6"/>
                                                    </StackPanel>

                                                    <!-- Botones -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                                        <Button Content="â¬‡"
                                                                Command="{Binding DataContext.DescargarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"
                                                                Background="#3498DB"
                                                                Foreground="White"
                                                                Width="25"
                                                                Height="25"
                                                                FontSize="10"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                Margin="0,0,5,0"
                                                                ToolTip="Descargar">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        CornerRadius="3">
                                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                                    VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#2980B9"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>

                                                        <Button Content="âœ–"
                                                                Command="{Binding DataContext.EliminarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"
                                                                Background="#E74C3C"
                                                                Foreground="White"
                                                                Width="25"
                                                                Height="25"
                                                                FontSize="10"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                ToolTip="Eliminar">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        CornerRadius="3">
                                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                                    VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#C0392B"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>

                        <!-- Separador -->
                        <Border Grid.Column="1" Background="#ECF0F1" Width="2" CornerRadius="1"/>

                        <!-- Columna Receptor -->
                        <StackPanel Grid.Column="2">
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Background="#27AE60"
                                        CornerRadius="8"
                                        Padding="12">
                                    <TextBlock Text="{Binding TotalAdjuntosReceptor, StringFormat='ðŸ“¥ Archivos del Receptor ({0})'}"
                                               FontSize="15"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <Button Grid.Column="1"
                                        Content="ðŸ“"
                                        Command="{Binding SubirAdjuntoCommand}"
                                        Visibility="{Binding PuedeSubirArchivos, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Background="#27AE60"
                                        Foreground="White"
                                        Width="30"
                                        Height="30"
                                        FontSize="14"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Subir archivo">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#229954"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- Mensaje informativo cuando no se pueden subir archivos -->
                            <Border Background="#FFF3CD"
                                    BorderBrush="#FFC107"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8,5"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PuedeSubirArchivos}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock FontSize="11"
                                               Foreground="#856404"
                                               TextWrapping="Wrap">
                                        <Run Text="âš  No se pueden subir archivos"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10"
                                               Foreground="#856404"
                                               TextWrapping="Wrap"
                                               Margin="0,3,0,0">
                                        <Run Text="(Tarea cerrada o completada)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Lista de archivos del receptor -->
                            <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding AdjuntosReceptor}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#E8F8F5" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="18" Margin="0,0,8,0"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding NombreArchivo}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#2C3E50"
                                                                   FontSize="12"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding NombreArchivo}"/>
                                                    </Grid>

                                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="26,5,0,5">
                                                        <TextBlock Text="{Binding TamaÃ±oArchivo, StringFormat={}{0:N0} bytes}"
                                                                   FontSize="10"
                                                                   Foreground="#95A5A6"/>
                                                    </StackPanel>

                                                    <!-- Botones -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                                        <Button Content="â¬‡"
                                                                Command="{Binding DataContext.DescargarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"
                                                                Background="#3498DB"
                                                                Foreground="White"
                                                                Width="25"
                                                                Height="25"
                                                                FontSize="10"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                Margin="0,0,5,0"
                                                                ToolTip="Descargar">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        CornerRadius="3">
                                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                                    VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#2980B9"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>

                                                        <Button Content="âœ–"
                                                                Command="{Binding DataContext.EliminarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"
                                                                Background="#E74C3C"
                                                                Foreground="White"
                                                                Width="25"
                                                                Height="25"
                                                                FontSize="10"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                ToolTip="Eliminar">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        CornerRadius="3">
                                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                                    VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#C0392B"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
