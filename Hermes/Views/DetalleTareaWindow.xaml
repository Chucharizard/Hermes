<Window x:Class="Hermes.Views.DetalleTareaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Detalle de Tarea"
        Height="800"
        Width="1400"
        MinWidth="1200"
        MinHeight="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========================================== -->
        <!-- HEADER: TÃ­tulo, Estado, Prioridad, Fechas -->
        <!-- ========================================== -->
        <Border Grid.Row="0" Padding="30,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TÃ­tulo de la tarea -->
                <TextBlock Grid.Row="0"
                           Text="{Binding Tarea.TituloTarea}"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <!-- Info compacta: Estado, Prioridad, Fechas -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Estado -->
                    <Border Grid.Column="0"
                            Background="#F39C12"
                            CornerRadius="15"
                            Padding="12,6"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â—" FontSize="12" Foreground="White" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Tarea.EstadoTarea}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Prioridad -->
                    <Border Grid.Column="1"
                            Background="#E74C3C"
                            CornerRadius="15"
                            Padding="12,6"
                            Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš¡" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Tarea.PrioridadTarea}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Fechas -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="ðŸ“…" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Inicio:" FontSize="13" Foreground="#ECF0F1" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Tarea.FechaInicioTarea, StringFormat=dd/MM/yyyy HH:mm}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â°" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="LÃ­mite:" FontSize="13" Foreground="#ECF0F1" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Tarea.FechaLimiteTarea, StringFormat=dd/MM/yyyy HH:mm}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- CONTENIDO: 3 COLUMNAS -->
        <!-- ========================================== -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========================================== -->
            <!-- COLUMNA 1: COMENTARIOS -->
            <!-- ========================================== -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15" Color="#2C3E50"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header Comentarios -->
                    <Border Grid.Row="0"
                            Background="{StaticResource PrimaryGradient}"
                            CornerRadius="8"
                            Padding="15,10"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="ðŸ’¬ Historial de Comentarios"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <Border Grid.Column="1"
                                    Background="White"
                                    CornerRadius="12"
                                    Padding="10,4"
                                    MinWidth="35">
                                <TextBlock Text="{Binding TotalComentarios}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#3498DB"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Lista de comentarios -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Comentarios}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8FBFD"
                                            BorderBrush="#E3F2FD"
                                            BorderThickness="0,0,0,2"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="32"
                                                        Height="32"
                                                        CornerRadius="16"
                                                        Background="#3498DB"
                                                        Margin="0,0,10,0">
                                                    <TextBlock Text="ðŸ‘¤"
                                                               FontSize="16"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Foreground="#2C3E50" FontSize="13">
                                                        <Run Text="{Binding Usuario.Empleado.NombresEmpleado, Mode=OneWay}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding Usuario.Empleado.ApellidosEmpleado, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding FechaComentario, StringFormat=dd/MM/yyyy HH:mm}"
                                                               FontSize="10"
                                                               Foreground="#95A5A6"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>

                                            <TextBlock Text="{Binding Comentario}"
                                                       TextWrapping="Wrap"
                                                       Foreground="#34495E"
                                                       FontSize="12"
                                                       LineHeight="18"
                                                       Margin="42,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Agregar comentario -->
                    <Border Grid.Row="2"
                            Background="#F8F9FA"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="âœ Nuevo Comentario"
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"
                                       FontSize="13"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding NuevoComentario, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="60"
                                     Padding="10"
                                     FontSize="12"
                                     BorderBrush="#BDC3C7"
                                     BorderThickness="1"
                                     Background="White"
                                     VerticalScrollBarVisibility="Auto"/>
                            <Button Content="ðŸ“¤ Enviar"
                                    Command="{Binding AgregarComentarioCommand}"
                                    Background="#3498DB"
                                    Foreground="White"
                                    Padding="12,8"
                                    Margin="0,8,0,0"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- COLUMNA 2: ADJUNTOS (Emisor y Receptor) -->
            <!-- ========================================== -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15" Color="#2C3E50"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Adjuntos del Emisor -->
                    <Border Grid.Row="0"
                            Background="#E67E22"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="ðŸ“¤ Archivos del Emisor"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <Border Grid.Column="1"
                                    Background="White"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    MinWidth="30">
                                <TextBlock Text="{Binding TotalAdjuntosEmisor}"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#E67E22"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AdjuntosEmisor}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FEF5E7" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="16" Margin="0,0,8,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding NombreArchivo}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding NombreArchivo}"/>
                                                <TextBlock Text="{Binding TamaÃ±oArchivo, StringFormat={}{0:N0} bytes}"
                                                           FontSize="9"
                                                           Foreground="#95A5A6"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="â¬‡"
                                                        Command="{Binding DataContext.DescargarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#3498DB"
                                                        Foreground="White"
                                                        Width="24"
                                                        Height="24"
                                                        FontSize="10"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Margin="0,0,4,0"
                                                        ToolTip="Descargar">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#2980B9"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <Button Content="âœ–"
                                                        Command="{Binding DataContext.EliminarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#E74C3C"
                                                        Foreground="White"
                                                        Width="24"
                                                        Height="24"
                                                        FontSize="10"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        ToolTip="Eliminar">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Adjuntos del Receptor -->
                    <Border Grid.Row="3"
                            Background="#27AE60"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="ðŸ“¥ Archivos del Receptor"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <Border Grid.Column="1"
                                    Background="White"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    MinWidth="30"
                                    Margin="0,0,8,0">
                                <TextBlock Text="{Binding TotalAdjuntosReceptor}"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Button Grid.Column="2"
                                    Content="ðŸ“"
                                    Command="{Binding SubirAdjuntoCommand}"
                                    Visibility="{Binding PuedeSubirArchivos, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Background="White"
                                    Foreground="#27AE60"
                                    Width="28"
                                    Height="28"
                                    FontSize="13"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Subir archivo">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F8F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Mensaje si no puede subir archivos -->
                            <Border Background="#FFF3CD"
                                    BorderBrush="#FFC107"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8"
                                    Margin="0,0,0,8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PuedeSubirArchivos}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock FontSize="10" Foreground="#856404" TextWrapping="Wrap">
                                    <Run Text="âš  No se pueden subir archivos (tarea cerrada o completada)"/>
                                </TextBlock>
                            </Border>

                            <ItemsControl ItemsSource="{Binding AdjuntosReceptor}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E8F8F5" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="16" Margin="0,0,8,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding NombreArchivo}"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               FontSize="11"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding NombreArchivo}"/>
                                                    <TextBlock Text="{Binding TamaÃ±oArchivo, StringFormat={}{0:N0} bytes}"
                                                               FontSize="9"
                                                               Foreground="#95A5A6"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <Button Content="â¬‡"
                                                            Command="{Binding DataContext.DescargarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#3498DB"
                                                            Foreground="White"
                                                            Width="24"
                                                            Height="24"
                                                            FontSize="10"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Margin="0,0,4,0"
                                                            ToolTip="Descargar">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#2980B9"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>

                                                    <Button Content="âœ–"
                                                            Command="{Binding DataContext.EliminarAdjuntoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#E74C3C"
                                                            Foreground="White"
                                                            Width="24"
                                                            Height="24"
                                                            FontSize="10"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            ToolTip="Eliminar">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#C0392B"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- COLUMNA 3: DESCRIPCIÃ“N Y USUARIOS -->
            <!-- ========================================== -->
            <ScrollViewer Grid.Column="4" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- DescripciÃ³n de la tarea -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15" Color="#2C3E50"/>
                        </Border.Effect>

                        <StackPanel>
                            <Border Background="{StaticResource SuccessGradient}"
                                    CornerRadius="8"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <TextBlock Text="ðŸ“ DescripciÃ³n"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>

                            <TextBlock Text="{Binding Tarea.DescripcionTarea, TargetNullValue='Sin descripciÃ³n'}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Foreground="#2C3E50"
                                       LineHeight="20"/>
                        </StackPanel>
                    </Border>

                    <!-- Usuario Emisor -->
                    <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15" Color="#2C3E50"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="60"
                                    Height="60"
                                    CornerRadius="30"
                                    Background="#E67E22"
                                    Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“¤"
                                           FontSize="28"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="EMISOR"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="#E67E22"
                                           Margin="0,0,0,4"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"
                                           TextWrapping="Wrap">
                                    <Run Text="{Binding Tarea.UsuarioEmisor.Empleado.NombresEmpleado, Mode=OneWay}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding Tarea.UsuarioEmisor.Empleado.ApellidosEmpleado, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0">
                                    <Run Text="@"/><Run Text="{Binding Tarea.UsuarioEmisor.NombreUsuario, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Usuario Receptor -->
                    <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15" Color="#2C3E50"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="60"
                                    Height="60"
                                    CornerRadius="30"
                                    Background="#27AE60"
                                    Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“¥"
                                           FontSize="28"
                                           Foreground="White"
