<Window x:Class="Hermes.Views.GestionarUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Gestionar Usuario" 
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Border Width="550" Background="White" 
                CornerRadius="10" 
                Padding="40"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Gestionar Usuario del Empleado" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <Border Background="#ECF0F1" 
                            Padding="15" 
                            CornerRadius="5"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Empleado: " FontWeight="Bold" FontSize="14" Foreground="#2C3E50"/>
                                <TextBlock Text="{Binding EmpleadoNombreCompleto}" FontSize="14" Foreground="#2C3E50"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="CI: " FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding Empleado.CiEmpleado}" FontSize="12" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="Nombre de Usuario:" 
                               FontSize="12" 
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Usuario.NombreUsuario, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Contrasena:" 
                               FontSize="12" 
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 Margin="0,0,0,15"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                    
                    <TextBlock Text="Confirmar Contrasena:" 
                               FontSize="12" 
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 Margin="0,0,0,15"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    
                    <TextBlock Text="Rol:" 
                               FontSize="12" 
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding RolSeleccionado}"
                              DisplayMemberPath="NombreRol"
                              Height="35"
                              FontSize="14"
                              Padding="10,5"
                              Margin="0,0,0,15"/>
                    
                    <CheckBox Content="Usuario Activo"
                              IsChecked="{Binding Usuario.EsActivoUsuario}"
                              FontSize="12"
                              Foreground="#34495E"
                              Margin="0,0,0,20"/>
                    
                    <Border Background="#FFEBEE" 
                            CornerRadius="4" 
                            Padding="10,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding MensajeError}"
                                   Foreground="#C62828"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <Border Background="#E8F5E9" 
                            CornerRadius="4" 
                            Padding="10,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeExito, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding MensajeExito}"
                                   Foreground="#27AE60"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                                Content="Cancelar"
                                Command="{Binding CancelarCommand}"
                                Height="40"
                                Background="#95A5A6"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="0,0,5,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7F8C8D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Grid.Column="1"
                                Content="{Binding TextoBotonGuardar}"
                                Command="{Binding GuardarUsuarioCommand}"
                                Height="40"
                                Background="#9B59B6"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="5,0,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#8E44AD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
