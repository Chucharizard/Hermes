<UserControl x:Class="Hermes.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:DashboardViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <converters:NombreToInitialsConverter x:Key="NombreToInitialsConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header compacto y profesional -->
        <Border Grid.Row="0" Background="#16213e" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.4" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo con icono -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#9B59B6" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                        <TextBlock Text="ðŸ“Š" FontSize="20"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Dashboard"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#FFFFFF"/>
                        <TextBlock Text="EstadÃ­sticas generales del sistema"
                                   FontSize="11"
                                   Foreground="#95A5A6"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- BotÃ³n Dashboard Consolidado -->
                <Button Grid.Column="2"
                        Command="{Binding GenerarDashboardConsolidadoCommand}"
                        IsEnabled="{Binding GenerandoReporte, Converter={StaticResource InverseBooleanConverter}}"
                        Background="#3498DB"
                        Foreground="White"
                        Padding="15,10"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3" Color="#3498DB"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2E86AB"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Generar Reporte Excel" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Stats Cards -->
                    <RowDefinition Height="Auto"/> <!-- Tareas Urgentes + Actividad -->
                    <RowDefinition Height="Auto"/> <!-- InformaciÃ³n del reporte -->
                    <RowDefinition Height="Auto"/> <!-- BotÃ³n Actualizar -->
                </Grid.RowDefinitions>

                <!-- Tarjetas de EstadÃ­sticas compactas y modernas -->
                <UniformGrid Grid.Row="0" Rows="1" Columns="5" Margin="0,0,0,20">
                    <!-- Total Tareas -->
                    <Border Background="#16213e"
                            BorderBrush="#9B59B6"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="0,0,8,0"
                            Padding="18,15"
                            Cursor="Hand"
                            MouseLeftButtonDown="StatsCard_MouseLeftButtonDown"
                            Tag="Total">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a2942"/>
                                        <Setter Property="BorderBrush" Value="#9B59B6"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Border Background="#9B59B6" CornerRadius="8" Padding="8" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="ðŸ“‹" FontSize="24"/>
                            </Border>
                            <TextBlock Text="{Binding TotalTareas}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Tareas"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#16213e"
                            BorderBrush="#3498DB"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="0,0,8,0"
                            Padding="18,15"
                            Cursor="Hand"
                            MouseLeftButtonDown="StatsCard_MouseLeftButtonDown"
                            Tag="Pendiente">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a2942"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Border Background="#3498DB" CornerRadius="8" Padding="8" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="â³" FontSize="24"/>
                            </Border>
                            <TextBlock Text="{Binding TareasPendientes}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#16213e"
                            BorderBrush="#1ABC9C"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="0,0,8,0"
                            Padding="18,15"
                            Cursor="Hand"
                            MouseLeftButtonDown="StatsCard_MouseLeftButtonDown"
                            Tag="Completado">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a2942"/>
                                        <Setter Property="BorderBrush" Value="#1ABC9C"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Border Background="#1ABC9C" CornerRadius="8" Padding="8" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="âœ“" FontSize="24"/>
                            </Border>
                            <TextBlock Text="{Binding TareasCompletadas}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Completadas"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="#16213e"
                            BorderBrush="#E74C3C"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="0,0,8,0"
                            Padding="18,15"
                            Cursor="Hand"
                            MouseLeftButtonDown="StatsCard_MouseLeftButtonDown"
                            Tag="Vencido">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a2942"/>
                                        <Setter Property="BorderBrush" Value="#E74C3C"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Border Background="#E74C3C" CornerRadius="8" Padding="8" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="âš " FontSize="24"/>
                            </Border>
                            <TextBlock Text="{Binding TareasVencidas}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Background="#16213e"
                            BorderBrush="#F39C12"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="0,0,0,0"
                            Padding="18,15"
                            Cursor="Hand"
                            MouseLeftButtonDown="StatsCard_MouseLeftButtonDown"
                            Tag="Observado">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a2942"/>
                                        <Setter Property="BorderBrush" Value="#F39C12"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1.03" Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                   To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Border Background="#F39C12" CornerRadius="8" Padding="8" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="ðŸ‘" FontSize="24"/>
                            </Border>
                            <TextBlock Text="{Binding TareasObservadas}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Observadas"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Tareas Urgentes y Actividad Reciente -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tareas Urgentes -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <!-- Header -->
                            <Border Background="#E74C3C" CornerRadius="8,8,0,0" Padding="15,12" Margin="-15,-15,-15,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”¥" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tareas Urgentes"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TareasUrgentes.Count, StringFormat=({0})}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#FFEBEE"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Lista de Tareas Urgentes -->
                            <ItemsControl ItemsSource="{Binding TareasUrgentes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FEF5F1"
                                                BorderBrush="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                BorderThickness="0,0,0,3"
                                                CornerRadius="6"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                Cursor="Hand">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.05" Color="#E74C3C"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- TÃ­tulo -->
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding TituloTarea}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="400"/>

                                                <!-- Estado y Prioridad -->
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                                                    <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                            CornerRadius="3"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding PrioridadTarea}"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                    <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                            CornerRadius="3"
                                                            Padding="6,2"
                                                            Margin="5,0,0,0">
                                                        <TextBlock Text="{Binding EstadoTarea}"
                                                                   FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </StackPanel>

                                                <!-- Fecha LÃ­mite -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                    <TextBlock Text="â°" FontSize="11" Margin="0,0,4,0" Foreground="#7F8C8D"/>
                                                    <TextBlock Text="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                                               FontSize="11"
                                                               Foreground="#E74C3C"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Actividad Reciente -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                        <StackPanel>
                            <!-- Header -->
                            <Border Background="#3498DB" CornerRadius="8,8,0,0" Padding="15,12" Margin="-15,-15,-15,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Œ" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Actividad Reciente"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ActividadReciente.Count, StringFormat=({0})}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#E3F2FD"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Lista de Actividad Reciente -->
                            <ItemsControl ItemsSource="{Binding ActividadReciente}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8FBFD"
                                                BorderBrush="#E3F2FD"
                                                BorderThickness="0,0,0,2"
                                                CornerRadius="6"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- TÃ­tulo -->
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding TituloTarea}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="400"/>

                                                <!-- Estado -->
                                                <Border Grid.Row="1"
                                                        Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                        CornerRadius="3"
                                                        Padding="6,2"
                                                        HorizontalAlignment="Left"
                                                        Margin="0,5,0,5">
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"/>
                                                </Border>

                                                <!-- Fecha Inicio -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“…" FontSize="11" Margin="0,0,4,0" Foreground="#7F8C8D"/>
                                                    <TextBlock Text="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy HH:mm}"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                </StackPanel>
                                            </Grid>
