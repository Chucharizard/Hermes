                </Grid.RowDefinitions>

                <!-- Tarjetas de EstadÃ­sticas con Colores Vivos -->
                <UniformGrid Grid.Row="0" Rows="1" Columns="5" Margin="0,0,0,20">
                    <!-- Total Tareas -->
                    <Border Background="#34495E"
                            CornerRadius="12"
                            Margin="0,0,10,0"
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#34495E"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹"
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalTareas}"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Tareas"
                                       FontSize="13"
                                       Foreground="#ECF0F1"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#F39C12"
                            CornerRadius="12"
                            Margin="0,0,10,0"
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#F39C12"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="â³"
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TareasPendientes}"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="13"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#27AE60"
                            CornerRadius="12"
                            Margin="0,0,10,0"
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#27AE60"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="âœ“"
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TareasCompletadas}"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Completadas"
                                       FontSize="13"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="#E74C3C"
                            CornerRadius="12"
                            Margin="0,0,10,0"
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#E74C3C"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="âš "
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TareasVencidas}"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="13"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Background="#9B59B6"
                            CornerRadius="12"
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#9B59B6"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ‘"
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TareasObservadas}"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Observadas"
                                       FontSize="13"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Tareas Urgentes y Actividad Reciente -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tareas Urgentes -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <!-- Header -->
                            <Border Background="#E74C3C" CornerRadius="8,8,0,0" Padding="15,12" Margin="-15,-15,-15,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”¥" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tareas Urgentes"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TareasUrgentes.Count, StringFormat=({0})}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#FFEBEE"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Lista de Tareas Urgentes -->
                            <ItemsControl ItemsSource="{Binding TareasUrgentes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FEF5F1"
                                                BorderBrush="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                BorderThickness="0,0,0,3"
                                                CornerRadius="6"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                Cursor="Hand">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.05" Color="#E74C3C"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- TÃ­tulo -->
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding TituloTarea}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="400"/>

                                                <!-- Estado y Prioridad -->
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                                                    <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                            CornerRadius="3"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding PrioridadTarea}"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                    <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                            CornerRadius="3"
                                                            Padding="6,2"
                                                            Margin="5,0,0,0">
                                                        <TextBlock Text="{Binding EstadoTarea}"
                                                                   FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </StackPanel>

                                                <!-- Fecha LÃ­mite -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                    <TextBlock Text="â°" FontSize="11" Margin="0,0,4,0" Foreground="#7F8C8D"/>
                                                    <TextBlock Text="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                                               FontSize="11"
                                                               Foreground="#E74C3C"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Actividad Reciente -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                        <StackPanel>
                            <!-- Header -->
                            <Border Background="#3498DB" CornerRadius="8,8,0,0" Padding="15,12" Margin="-15,-15,-15,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Œ" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Actividad Reciente"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ActividadReciente.Count, StringFormat=({0})}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#E3F2FD"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Lista de Actividad Reciente -->
                            <ItemsControl ItemsSource="{Binding ActividadReciente}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8FBFD"
                                                BorderBrush="#E3F2FD"
                                                BorderThickness="0,0,0,2"
                                                CornerRadius="6"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- TÃ­tulo -->
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding TituloTarea}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="400"/>

                                                <!-- Estado -->
                                                <Border Grid.Row="1"
                                                        Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                        CornerRadius="3"
                                                        Padding="6,2"
                                                        HorizontalAlignment="Left"
                                                        Margin="0,5,0,5">
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"/>
                                                </Border>

                                                <!-- Fecha CreaciÃ³n -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“…" FontSize="11" Margin="0,0,4,0" Foreground="#7F8C8D"/>
                                                    <TextBlock Text="{Binding FechaCreacionTarea, StringFormat=dd/MM/yyyy HH:mm}"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- InformaciÃ³n del reporte -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="30" Margin="0,0,0,20">

                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Dashboard Consolidado Excel"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#34495E" Margin="0,0,0,10">
                            <Run Text="El sistema genera un archivo Excel profesional con mÃºltiples hojas de anÃ¡lisis:"/>
                        </TextBlock>

                        <StackPanel Margin="20,10,0,20">
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="ðŸ“„ " FontWeight="Bold" Foreground="#2E86AB"/>
                                <Run Text="Hoja 1: Dashboard Principal con KPIs visuales"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="ðŸ“„ " FontWeight="Bold" Foreground="#A23B72"/>
                                <Run Text="Hoja 2: Datos Detallados y EstadÃ­sticas"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="ðŸ“„ " FontWeight="Bold" Foreground="#62C370"/>
                                <Run Text="Hoja 3: AnÃ¡lisis y MÃ©tricas de Rendimiento"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="âœ“ " FontWeight="Bold" Foreground="#27AE60"/>
                                <Run Text="Incluye estadÃ­sticas de estados, prioridades y top 3 usuarios"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="âœ“ " FontWeight="Bold" Foreground="#3498DB"/>
                                <Run Text="Formatos profesionales con colores y bordes"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="âœ“ " FontWeight="Bold" Foreground="#F39C12"/>
                                <Run Text="MÃ©tricas de rendimiento con evaluaciÃ³n automÃ¡tica"/>
                            </TextBlock>
                        </StackPanel>

                        <Border Background="#E8F8F5" Padding="15" CornerRadius="5" BorderBrush="#27AE60" BorderThickness="1">
                            <StackPanel>
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#27AE60" Margin="0,0,0,5">
                                    <Run Text="ðŸ’¡ "/>
                                    <Run Text="Reporte completo y profesional"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#2C3E50" TextWrapping="Wrap">
                                    <Run Text="El archivo se guardarÃ¡ en tu Escritorio y se abrirÃ¡ automÃ¡ticamente. Incluye todos los reportes en un solo archivo con mÃºltiples hojas organizadas."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Indicador de carga -->
                        <Border Background="#E3F2FD"
                                Padding="15"
                                CornerRadius="5"
                                BorderBrush="#2E86AB"
                                BorderThickness="1"
                                Margin="0,15,0,0"
                                Visibility="{Binding GenerandoReporte, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â³ " FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Generando dashboard consolidado, por favor espere..."
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#1565C0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- BotÃ³n Actualizar -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                    <Button Content="ðŸ”„ Actualizar EstadÃ­sticas"
                            Command="{Binding ActualizarEstadisticasCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="30,15"
                            FontSize="16"
                            HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
