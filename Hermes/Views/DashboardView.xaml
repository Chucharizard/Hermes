<UserControl x:Class="Hermes.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels">

    <UserControl.DataContext>
        <viewmodels:DashboardViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š Dashboard - EstadÃ­sticas de Tareas"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBlock Text="Visualiza el estado general de las tareas del sistema"
                               FontSize="14"
                               Foreground="#7F8C8D"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="ðŸ“Š Generar Reporte Excel"
                        Command="{Binding GenerarReporteExcelCommand}"
                        IsEnabled="{Binding GenerandoReporte, Converter={StaticResource InverseBooleanConverter}}"
                        Background="#27AE60"
                        Foreground="White"
                        Padding="20,10"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tarjetas de EstadÃ­sticas -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Tareas -->
                    <Border Grid.Column="0" Background="White" Padding="20" Margin="0,0,10,0" CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ TOTAL"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalTareas}"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="#34495E"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="Tareas"
                                       FontSize="14"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Grid.Column="1" Background="White" Padding="20" Margin="0,0,10,0" CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="â³ PENDIENTES"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#F39C12"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasPendientes}"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="#F39C12"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="En proceso"
                                       FontSize="14"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Grid.Column="2" Background="White" Padding="20" Margin="0,0,10,0" CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="âœ“ COMPLETADAS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasCompletadas}"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="Finalizadas"
                                       FontSize="14"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Grid.Column="3" Background="White" Padding="20" Margin="0,0,10,0" CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="âš  VENCIDAS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#E74C3C"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasVencidas}"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="#E74C3C"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="Atrasadas"
                                       FontSize="14"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Grid.Column="4" Background="White" Padding="20" CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ‘ OBSERVADAS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#9B59B6"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasObservadas}"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="#9B59B6"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="En revisiÃ³n"
                                       FontSize="14"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- InformaciÃ³n del reporte -->
                <Border Grid.Row="1" Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Reporte Excel Profesional"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#34495E" Margin="0,0,0,10">
                            <Run Text="El reporte generarÃ¡ un archivo Excel completo que incluye:"/>
                        </TextBlock>

                        <StackPanel Margin="20,10,0,20">
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="â€¢ " FontWeight="Bold" Foreground="#27AE60"/>
                                <Run Text="Hoja 'Datos de Tareas': Tabla completa con todas las tareas registradas"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="â€¢ " FontWeight="Bold" Foreground="#3498DB"/>
                                <Run Text="Hoja 'EstadÃ­sticas': Resumen por estado con barras visuales coloreadas"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="â€¢ " FontWeight="Bold" Foreground="#9B59B6"/>
                                <Run Text="Hoja 'Prioridades': DistribuciÃ³n por prioridad con visualizaciones"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#34495E" Margin="0,5">
                                <Run Text="â€¢ " FontWeight="Bold" Foreground="#F39C12"/>
                                <Run Text="Formato profesional con colores, porcentajes e instrucciones para grÃ¡ficos"/>
                            </TextBlock>
                        </StackPanel>

                        <Border Background="#E8F8F5" Padding="15" CornerRadius="5" BorderBrush="#27AE60" BorderThickness="1">
                            <StackPanel>
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#27AE60" Margin="0,0,0,5">
                                    <Run Text="ðŸ’¡ "/>
                                    <Run Text="El archivo se guardarÃ¡ automÃ¡ticamente en tu Escritorio"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#2C3E50" TextWrapping="Wrap">
                                    <Run Text="y se abrirÃ¡ con Excel. Incluye visualizaciones con barras coloreadas e instrucciones paso a paso para crear grÃ¡ficos profesionales en segundos."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Indicador de carga -->
                        <Border Background="#FFF3CD"
                                Padding="15"
                                CornerRadius="5"
                                BorderBrush="#F39C12"
                                BorderThickness="1"
                                Margin="0,15,0,0"
                                Visibility="{Binding GenerandoReporte, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â³ " FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Generando reporte, por favor espere..."
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#856404"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- BotÃ³n Actualizar -->
                <Border Grid.Row="2" Background="White" Padding="20" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
                    </Border.Effect>

                    <Button Content="ðŸ”„ Actualizar EstadÃ­sticas"
                            Command="{Binding ActualizarEstadisticasCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="30,15"
                            FontSize="16"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
