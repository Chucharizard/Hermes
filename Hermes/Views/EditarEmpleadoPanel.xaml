                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âœ" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Editar Empleado"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Modifica la informaciÃ³n del empleado"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: InformaciÃ³n Personal -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ INFORMACIÃ“N PERSONAL" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextAccentColor}" Margin="0,0,0,15"/>

                    <!-- CI (readonly) -->
