                                   FontStyle="Italic"/>
                    </Border>

                    <!-- Nombres -->
                    <TextBlock Text="âœ Nombres:" FontSize="11" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.NombresEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <!-- Apellidos -->
                    <TextBlock Text="âœ Apellidos:" FontSize="11" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.ApellidosEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: InformaciÃ³n de Contacto -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“ž INFORMACIÃ“N DE CONTACTO" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextSuccessColor}" Margin="0,0,0,15"/>

                    <!-- TelÃ©fono -->
                    <TextBlock Text="ðŸ“± TelÃ©fono:" FontSize="11" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.TelefonoEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <!-- Correo -->
                    <TextBlock Text="âœ‰ Correo ElectrÃ³nico:" FontSize="11" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.CorreoEmpleado, UpdateSourceTrigger=PropertyChanged}"
