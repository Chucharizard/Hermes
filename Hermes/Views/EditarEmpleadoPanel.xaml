                    <Border Background="#0a0a15" BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="1" CornerRadius="4" Padding="10,8" Margin="0,0,0,12">
                        <TextBlock Text="{Binding Empleado.CiEmpleado}"
                                   Foreground="#95A5A6"
