                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,0,0,15"
                    Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource PrimaryColorValue}"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
