                             Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: Estado -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="âš™ CONFIGURACIÃ“N" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource WarningColor}" Margin="0,0,0,15"/>

                    <Border Background="{DynamicResource BackgroundDarkest}" CornerRadius="6" Padding="12">
