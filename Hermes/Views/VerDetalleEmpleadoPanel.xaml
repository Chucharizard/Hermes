                            </StackPanel>
                        </StackPanel>

                        <!-- Correo -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <Border Background="#3498DB" CornerRadius="8" Padding="12" Margin="0,0,15,0">
