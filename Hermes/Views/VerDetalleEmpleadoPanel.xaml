                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- TelÃ©fono -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Background="#1a1a2e" CornerRadius="6" Padding="10" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ“±" FontSize="20"/>
