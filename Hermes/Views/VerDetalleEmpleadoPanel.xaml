    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header con degradado y efectos mejorados -->
            <Border CornerRadius="12" Padding="25" Margin="0,0,0,25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a2e" Offset="0"/>
                        <GradientStop Color="#16213e" Offset="0.5"/>
                        <GradientStop Color="#0f3460" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.4" Color="#9B59B6"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <!-- Icono con efecto brillante -->
                    <Border Background="#9B59B6" CornerRadius="30" Width="60" Height="60" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="#9B59B6"/>
                        </Border.Effect>
                        <TextBlock Text="ðŸ‘" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
