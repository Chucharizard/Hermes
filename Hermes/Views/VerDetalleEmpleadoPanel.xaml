            </Border>

            <!-- Card con foto de perfil mejorada -->
            <Border CornerRadius="12" Padding="30" Margin="0,0,0,25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8E44AD" Offset="0"/>
                        <GradientStop Color="#9B59B6" Offset="0.5"/>
                        <GradientStop Color="#AF7AC5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.3" Color="#000000"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <!-- Avatar circular con efecto brillante -->
                    <Border Width="120" Height="120" CornerRadius="60" Margin="0,0,0,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6C3483" Offset="0"/>
                                <GradientStop Color="#8E44AD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#9B59B6"/>
                        </Border.Effect>
                        <TextBlock Text="ðŸ‘¤"
                                   FontSize="56"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Nombre completo con efecto sombra -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.4" Color="#000000"/>
                        </TextBlock.Effect>
                        <Run Text="{Binding Empleado.NombresEmpleado}" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <Run Text=" " />
                        <Run Text="{Binding Empleado.ApellidosEmpleado}" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    </TextBlock>

                    <!-- CI con badge estilo -->
                    <Border Background="#6C3483" CornerRadius="15" Padding="15,8" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>
                        <TextBlock Text="{Binding Empleado.CiEmpleado, StringFormat='CI: {0}'}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: InformaciÃ³n de Contacto -->
            <Border Background="#16213e" BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#1ABC9C"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header de secciÃ³n mejorado -->
                    <Border Background="#1ABC9C" CornerRadius="6" Padding="10,8" Margin="0,0,0,20" HorizontalAlignment="Left">
                        <TextBlock Text="ðŸ“ž INFORMACIÃ“N DE CONTACTO" FontSize="13" FontWeight="Bold" Foreground="#0a0a15"/>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- TelÃ©fono -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#1ABC9C" CornerRadius="8" Padding="12" Margin="0,0,15,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" Color="#1ABC9C"/>
                                </Border.Effect>
                                <TextBlock Text="ðŸ“±" FontSize="24"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="TelÃ©fono" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Empleado.TelefonoEmpleado}" FontSize="16" FontWeight="Bold" Foreground="#1ABC9C"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Correo -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <Border Background="#3498DB" CornerRadius="8" Padding="12" Margin="0,0,15,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" Color="#3498DB"/>
                                </Border.Effect>
                                <TextBlock Text="âœ‰" FontSize="24"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Correo ElectrÃ³nico" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Empleado.CorreoEmpleado}" FontSize="16" FontWeight="Bold" Foreground="#3498DB"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: Cuenta de Usuario -->
            <Border Background="#16213e" BorderBrush="#9B59B6" BorderThickness="2" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#9B59B6"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header de secciÃ³n mejorado -->
                    <Border Background="#9B59B6" CornerRadius="6" Padding="10,8" Margin="0,0,0,20" HorizontalAlignment="Left">
                        <TextBlock Text="ðŸ” CUENTA DE USUARIO" FontSize="13" FontWeight="Bold" Foreground="#FFFFFF"/>
                    </Border>

                    <!-- Tiene usuario -->
                    <StackPanel Visibility="{Binding TieneUsuario, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nombre de Usuario -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#9B59B6" CornerRadius="8" Padding="12" Margin="0,0,15,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" Color="#9B59B6"/>
                                    </Border.Effect>
                                    <TextBlock Text="ðŸ‘¤" FontSize="24"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Nombre de Usuario" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Usuario.NombreUsuario}" FontSize="16" FontWeight="Bold" Foreground="#9B59B6"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Rol -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#E67E22" CornerRadius="8" Padding="12" Margin="0,0,15,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" Color="#E67E22"/>
                                    </Border.Effect>
                                    <TextBlock Text="ðŸ›¡" FontSize="24"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Rol del Sistema" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Usuario.RolId, StringFormat='Rol ID: {0}'}" FontSize="16" FontWeight="Bold" Foreground="#E67E22"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Estado de Usuario -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                                <Border CornerRadius="8" Padding="12" Margin="0,0,15,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Usuario.EsActivoUsuario}" Value="True">
                                                    <Setter Property="Background" Value="#1ABC9C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" Color="#9B59B6"/>
                                    </Border.Effect>
                                    <TextBlock Text="âš¡" FontSize="24"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Estado de Acceso" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                    <TextBlock FontSize="16" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Inactivo"/>
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Usuario.EsActivoUsuario}" Value="True">
                                                        <Setter Property="Text" Value="Activo"/>
                                                        <Setter Property="Foreground" Value="#1ABC9C"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- No tiene usuario -->
                    <Border CornerRadius="8" Padding="20" Background="#3a2f1f" Visibility="{Binding TieneUsuario, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="#F39C12"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#F39C12" CornerRadius="25" Width="50" Height="50" Margin="0,0,20,0">
                                <TextBlock Text="â„¹" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0a0a15"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Sin Cuenta de Usuario" FontSize="18" FontWeight="Bold" Foreground="#F39C12"/>
                                <TextBlock Text="Este empleado no tiene una cuenta de usuario asignada" FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: Estado del Empleado -->
            <Border Background="#16213e" BorderBrush="#F39C12" BorderThickness="2" CornerRadius="10" Padding="25" Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#F39C12"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header de secciÃ³n mejorado -->
                    <Border Background="#F39C12" CornerRadius="6" Padding="10,8" Margin="0,0,0,20" HorizontalAlignment="Left">
                        <TextBlock Text="âš™ ESTADO DEL EMPLEADO" FontSize="13" FontWeight="Bold" Foreground="#0a0a15"/>
                    </Border>

                    <Border CornerRadius="8" Padding="20">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#3a1f1f"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Empleado.EsActivoEmpleado}" Value="True">
                                        <Setter Property="Background" Value="#1f3a1f"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="#E74C3C"/>
                        </Border.Effect>

                        <StackPanel Orientation="Horizontal">
                            <Border CornerRadius="30" Width="60" Height="60" Margin="0,0,20,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E74C3C"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Empleado.EsActivoEmpleado}" Value="True">
                                                <Setter Property="Background" Value="#1ABC9C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5" Color="#E74C3C"/>
                                </Border.Effect>
                                <TextBlock FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âŒ"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Empleado.EsActivoEmpleado}" Value="True">
                                                    <Setter Property="Text" Value="âœ…"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock FontSize="20" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Empleado Inactivo"/>
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Empleado.EsActivoEmpleado}" Value="True">
                                                    <Setter Property="Text" Value="Empleado Activo"/>
                                                    <Setter Property="Foreground" Value="#1ABC9C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Este empleado no estÃ¡ disponible para asignaciones"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Empleado.EsActivoEmpleado}" Value="True">
                                                    <Setter Property="Text" Value="Este empleado estÃ¡ disponible para asignaciones"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
