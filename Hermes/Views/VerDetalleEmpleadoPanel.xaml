                                <TextBlock Text="{Binding Empleado.CorreoEmpleado}" FontSize="14" FontWeight="SemiBold" Foreground="#ECF0F1"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: Estado del Empleado -->
