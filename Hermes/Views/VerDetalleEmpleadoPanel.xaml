                    </Grid>
                </StackPanel>
            </Border>

            <!-- SecciÃ³n: Cuenta de Usuario -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="#9B59B6" BorderThickness="2" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#9B59B6"/>
                </Border.Effect>
                <StackPanel>
