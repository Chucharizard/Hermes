                                <TextBlock Text="{Binding Empleado.TelefonoEmpleado}" FontSize="14" FontWeight="SemiBold" Foreground="#ECF0F1"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Correo -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <Border Background="#1a1a2e" CornerRadius="6" Padding="10" Margin="0,0,10,0">
                                <TextBlock Text="âœ‰" FontSize="20"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
