                    <Border Width="100" Height="100" CornerRadius="50" Background="#8E44AD" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ‘¤"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Nombre completo -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding Empleado.NombresEmpleado}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <Run Text=" " />
                        <Run Text="{Binding Empleado.ApellidosEmpleado}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </TextBlock>

                    <!-- CI -->
                    <TextBlock Text="{Binding Empleado.CiEmpleado, StringFormat='CI: {0}'}"
                               FontSize="13"
                               Foreground="#ECF0F1"
                               HorizontalAlignment="Center"
                               Opacity="0.9"/>
