<UserControl x:Class="Hermes.Views.GestionEmpleadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:converters="clr-namespace:Hermes.Converters"
             xmlns:views="clr-namespace:Hermes.Views">

    <UserControl.DataContext>
        <viewmodels:GestionEmpleadosViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:AccionToGridLengthConverter x:Key="AccionToGridLengthConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Lista principal -->
            <ColumnDefinition Width="{Binding AccionActual, Converter={StaticResource AccionToGridLengthConverter}, ConverterParameter=Lista}"/>
            <!-- Separador -->
            <ColumnDefinition Width="{Binding AccionActual, Converter={StaticResource AccionToGridLengthConverter}, ConverterParameter=Separador}"/>
            <!-- Panel de acciÃ³n -->
            <ColumnDefinition Width="{Binding AccionActual, Converter={StaticResource AccionToGridLengthConverter}, ConverterParameter=Detalle}"/>
        </Grid.ColumnDefinitions>

        <!-- ===== COLUMNA IZQUIERDA: LISTA DE EMPLEADOS ===== -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con botones -->
            <Border Grid.Row="0" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestion de Empleados y Usuarios"
                               Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="Administra empleados y asigna roles de usuario"
                               Style="{StaticResource SubtitleTextStyle}"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âž• Nuevo Empleado"
                            Command="{Binding AbrirNuevoEmpleadoCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="20,10"
                            Margin="0,0,10,0"/>

                    <Button Content="ðŸ”„ Actualizar"
                            Command="{Binding CargarEmpleadosCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- DataGrid de Empleados -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Buscador y Filtros -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Buscador -->
                    <TextBox Grid.Column="0"
                             Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Tag="ðŸ” Buscar por CI, nombre o apellido..."
                             Margin="0,0,10,0"/>

                    <!-- Label -->
                    <TextBlock Grid.Column="1"
                               Text="Estado:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="10,0"/>

                    <!-- Filtro de Estado -->
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding OpcionesFiltroEstado}"
                              SelectedItem="{Binding FiltroEstado}"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </Grid>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding EmpleadosFiltrados}"
                          SelectedItem="{Binding EmpleadoSeleccionado}"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}"
                          RowStyle="{StaticResource ModernDataGridRowStyle}">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CI" 
                                          Binding="{Binding CiEmpleado}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Nombres" 
                                          Binding="{Binding NombresEmpleado}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Apellidos" 
                                          Binding="{Binding ApellidosEmpleado}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Telefono" 
                                          Binding="{Binding TelefonoEmpleado}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Correo" 
                                          Binding="{Binding CorreoEmpleado}" 
                                          Width="200"/>
                        <DataGridCheckBoxColumn Header="Activo" 
                                              Binding="{Binding EsActivoEmpleado}" 
                                              Width="80"/>
                        
                        <DataGridTemplateColumn Header="Acciones" Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="ðŸ‘ Ver"
                                                Command="{Binding DataContext.VerDetalleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource InfoButtonStyle}"
                                                Padding="10,5"
                                                Margin="2"/>
                                        <Button Content="âœ Editar"
                                                Command="{Binding DataContext.EditarEmpleadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource WarningButtonStyle}"
                                                Padding="10,5"
                                                Margin="2"/>
                                        <Button Content="ðŸ‘¤ Usuario"
                                                Command="{Binding DataContext.GestionarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource CompactButtonStyle}"
                                                Padding="10,5"
                                                Margin="2">
                                            <Button.Background>
                                                <SolidColorBrush Color="#9B59B6"/>
                                            </Button.Background>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Footer con estadisticas (Tema oscuro morado medianoche) -->
                <Border Grid.Row="2"
                        Background="#16213e"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        Padding="15"
                        Margin="0,15,0,0"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š Total empleados: "
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"/>
                        <TextBlock Text="{Binding TotalEmpleados}"
                                   Foreground="#5DADE2"
                                   FontWeight="Bold"/>

                        <TextBlock Text="  |  âœ… Activos: "
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"
                                   Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding EmpleadosActivos}"
                                   Foreground="#1ABC9C"
                                   FontWeight="Bold"/>

                        <TextBlock Text="  |  âŒ Inactivos: "
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"
                                   Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding EmpleadosInactivos}"
                                   Foreground="#E74C3C"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        </Grid>

        <!-- ===== COLUMNA DERECHA: PANEL DE ACCIÃ“N ===== -->
        <Border Grid.Column="2" Background="#1a1a2e" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header con botÃ³n Volver -->
                <Border Grid.Row="0" Background="#16213e" Padding="15" CornerRadius="8,8,0,0">
                    <Grid>
                        <TextBlock Text="AcciÃ³n"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#ECF0F1"
                                   VerticalAlignment="Center"/>
                        <Button Content="â† Volver"
                                Command="{Binding VolverCommand}"
                                HorizontalAlignment="Right"
                                Style="{StaticResource InfoButtonStyle}"
                                Padding="15,8"/>
                    </Grid>
                </Border>

                <!-- Contenido dinÃ¡mico segÃºn AccionActual -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ContentControl Margin="20">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content" Value="{x:Null}"/>
                                <!-- Placeholder cuando no hay acciÃ³n -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AccionActual}" Value="{x:Null}">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                                                    <TextBlock Text="ðŸ‘¤" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15" Opacity="0.3" Foreground="#ECF0F1"/>
                                                    <TextBlock Text="Selecciona una acciÃ³n" FontSize="18" FontWeight="SemiBold" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>

                                    <!-- Vista: Ver Detalle -->
                                    <DataTrigger Binding="{Binding AccionActual}" Value="VerDetalle">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <StackPanel>
                                                    <TextBlock Text="ðŸ‘ Detalle del Empleado" FontSize="24" FontWeight="Bold" Foreground="#ECF0F1" Margin="0,0,0,30"/>

                                                    <Border Background="#16213e" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="CI:" FontWeight="Bold" Foreground="#BDC3C7" Margin="0,0,0,15"/>
                                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding EmpleadoEnAccion.CiEmpleado}" Foreground="#ECF0F1" Margin="0,0,0,15"/>

                                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombres:" FontWeight="Bold" Foreground="#BDC3C7" Margin="0,0,0,15"/>
                                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding EmpleadoEnAccion.NombresEmpleado}" Foreground="#ECF0F1" Margin="0,0,0,15"/>

                                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Apellidos:" FontWeight="Bold" Foreground="#BDC3C7" Margin="0,0,0,15"/>
                                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EmpleadoEnAccion.ApellidosEmpleado}" Foreground="#ECF0F1" Margin="0,0,0,15"/>

                                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="TelÃ©fono:" FontWeight="Bold" Foreground="#BDC3C7" Margin="0,0,0,15"/>
                                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding EmpleadoEnAccion.TelefonoEmpleado}" Foreground="#ECF0F1" Margin="0,0,0,15"/>

                                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Correo:" FontWeight="Bold" Foreground="#BDC3C7" Margin="0,0,0,15"/>
                                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding EmpleadoEnAccion.CorreoEmpleado}" Foreground="#ECF0F1" Margin="0,0,0,15"/>

                                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Estado:" FontWeight="Bold" Foreground="#BDC3C7"/>
                                                            <TextBlock Grid.Row="5" Grid.Column="1" Foreground="#ECF0F1">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="âŒ Inactivo"/>
                                                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding EmpleadoEnAccion.EsActivoEmpleado}" Value="True">
                                                                                <Setter Property="Text" Value="âœ… Activo"/>
                                                                                <Setter Property="Foreground" Value="#1ABC9C"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>

                                    <!-- Vista: Nuevo Empleado -->
                                    <DataTrigger Binding="{Binding AccionActual}" Value="Nuevo">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <views:NuevoEmpleadoPanel DataContext="{Binding ViewModelAccion}"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>

                                    <!-- Vista: Editar Empleado -->
                                    <DataTrigger Binding="{Binding AccionActual}" Value="Editar">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <views:EditarEmpleadoPanel DataContext="{Binding ViewModelAccion}"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>

                                    <!-- Vista: Gestionar Usuario -->
                                    <DataTrigger Binding="{Binding AccionActual}" Value="Usuario">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <views:GestionarUsuarioPanel DataContext="{Binding ViewModelAccion}"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
