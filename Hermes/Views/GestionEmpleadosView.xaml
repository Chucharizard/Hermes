<UserControl x:Class="Hermes.Views.GestionEmpleadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:converters="clr-namespace:Hermes.Converters"
             xmlns:views="clr-namespace:Hermes.Views">

    <UserControl.DataContext>
        <viewmodels:GestionEmpleadosViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:AccionToGridLengthConverter x:Key="AccionToGridLengthConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Lista principal -->
            <ColumnDefinition Width="{Binding AccionActual, Converter={StaticResource AccionToGridLengthConverter}, ConverterParameter=Lista}"/>
            <!-- Separador -->
            <ColumnDefinition Width="{Binding AccionActual, Converter={StaticResource AccionToGridLengthConverter}, ConverterParameter=Separador}"/>
            <!-- Panel de acciÃ³n -->
            <ColumnDefinition Width="{Binding AccionActual, Converter={StaticResource AccionToGridLengthConverter}, ConverterParameter=Detalle}"/>
        </Grid.ColumnDefinitions>

        <!-- ===== COLUMNA IZQUIERDA: LISTA DE EMPLEADOS ===== -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con botones -->
            <Border Grid.Row="0" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestion de Empleados y Usuarios"
                               Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="Administra empleados y asigna roles de usuario"
                               Style="{StaticResource SubtitleTextStyle}"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âž• Nuevo Empleado"
                            Command="{Binding AbrirNuevoEmpleadoCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="20,10"
                            Margin="0,0,10,0"/>

                    <Button Content="ðŸ”„ Actualizar"
                            Command="{Binding CargarEmpleadosCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- DataGrid de Empleados -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Buscador y Filtros -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Buscador -->
                    <TextBox Grid.Column="0"
                             Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Tag="ðŸ” Buscar por CI, nombre o apellido..."
                             Margin="0,0,10,0"/>

                    <!-- Label -->
                    <TextBlock Grid.Column="1"
                               Text="Estado:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="10,0"/>

                    <!-- Filtro de Estado -->
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding OpcionesFiltroEstado}"
                              SelectedItem="{Binding FiltroEstado}"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </Grid>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding EmpleadosFiltrados}"
                          SelectedItem="{Binding EmpleadoSeleccionado}"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}"
                          RowStyle="{StaticResource ModernDataGridRowStyle}"
                          MouseDoubleClick="DataGrid_MouseDoubleClick">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CI" 
                                          Binding="{Binding CiEmpleado}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Nombres" 
                                          Binding="{Binding NombresEmpleado}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Apellidos" 
                                          Binding="{Binding ApellidosEmpleado}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Telefono" 
                                          Binding="{Binding TelefonoEmpleado}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Correo" 
                                          Binding="{Binding CorreoEmpleado}" 
                                          Width="200"/>
                        <DataGridCheckBoxColumn Header="Activo" 
                                              Binding="{Binding EsActivoEmpleado}" 
                                              Width="80"/>
                        
                        <DataGridTemplateColumn Header="Acciones" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="âœ Editar"
                                                Command="{Binding DataContext.EditarEmpleadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource WarningButtonStyle}"
                                                Padding="10,5"
                                                Margin="2"/>
                                        <Button Content="ðŸ‘¤ Usuario"
                                                Command="{Binding DataContext.GestionarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource CompactButtonStyle}"
                                                Padding="10,5"
                                                Margin="2">
                                            <Button.Background>
                                                <SolidColorBrush Color="#9B59B6"/>
                                            </Button.Background>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Footer con estadisticas (Tema oscuro morado medianoche) -->
                <Border Grid.Row="2"
                        Background="{DynamicResource BackgroundDark}"
                        BorderBrush="{DynamicResource PrimaryColor}"
                        BorderThickness="1"
                        Padding="15"
                        Margin="0,15,0,0"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š Total empleados: "
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"/>
                        <TextBlock Text="{Binding TotalEmpleados}"
                                   Foreground="#5DADE2"
                                   FontWeight="Bold"/>

                        <TextBlock Text="  |  âœ… Activos: "
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"
                                   Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding EmpleadosActivos}"
                                   Foreground="#1ABC9C"
                                   FontWeight="Bold"/>

                        <TextBlock Text="  |  âŒ Inactivos: "
                                   FontWeight="SemiBold"
                                   Foreground="#ECF0F1"
                                   Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding EmpleadosInactivos}"
                                   Foreground="#E74C3C"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        </Grid>

        <!-- ===== COLUMNA DERECHA: PANEL DE ACCIÃ“N ===== -->
        <Border Grid.Column="2" Background="{DynamicResource BackgroundDarkest}" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header con botÃ³n Volver -->
                <Border Grid.Row="0" Background="{DynamicResource BackgroundDark}" Padding="15" CornerRadius="8,8,0,0">
                    <Grid>
                        <TextBlock Text="AcciÃ³n"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#ECF0F1"
                                   VerticalAlignment="Center"/>
                        <Button Content="â† Volver"
                                Command="{Binding VolverCommand}"
                                HorizontalAlignment="Right"
                                Style="{StaticResource InfoButtonStyle}"
                                Padding="15,8"/>
                    </Grid>
                </Border>

                <!-- Contenido dinÃ¡mico segÃºn AccionActual -->
                <ContentPresenter Grid.Row="1" Content="{Binding ViewModelAccion}" Margin="20">
                    <ContentPresenter.Resources>
                        <!-- Template para NuevoEmpleadoViewModel -->
                        <DataTemplate DataType="{x:Type viewmodels:NuevoEmpleadoViewModel}">
                            <views:NuevoEmpleadoPanel/>
                        </DataTemplate>

                        <!-- Template para EditarEmpleadoViewModel -->
                        <DataTemplate DataType="{x:Type viewmodels:EditarEmpleadoViewModel}">
                            <views:EditarEmpleadoPanel/>
                        </DataTemplate>

                        <!-- Template para GestionarUsuarioViewModel -->
                        <DataTemplate DataType="{x:Type viewmodels:GestionarUsuarioViewModel}">
                            <views:GestionarUsuarioPanel/>
                        </DataTemplate>

                        <!-- Template para VerDetalleEmpleadoViewModel -->
                        <DataTemplate DataType="{x:Type viewmodels:VerDetalleEmpleadoViewModel}">
                            <views:VerDetalleEmpleadoPanel/>
                        </DataTemplate>
                    </ContentPresenter.Resources>
                </ContentPresenter>
            </Grid>
        </Border>
    </Grid>
</UserControl>
