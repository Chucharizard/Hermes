<UserControl x:Class="Hermes.Views.GestionEmpleadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels">
    
    <UserControl.DataContext>
        <viewmodels:GestionEmpleadosViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header con botones -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestion de Empleados y Usuarios" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBlock Text="Administra empleados y asigna roles de usuario" 
                               FontSize="14" 
                               Foreground="#7F8C8D"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="? Nuevo Empleado"
                            Command="{Binding AbrirNuevoEmpleadoCommand}"
                            Background="#27AE60"
                            Foreground="White"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="?? Actualizar"
                            Command="{Binding CargarEmpleadosCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="20,10"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- DataGrid de Empleados -->
        <Border Grid.Row="1" Background="White" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Buscador -->
                <Border Grid.Row="0"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,0,15">
                    <TextBox Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             Padding="10"
                             FontSize="14"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding EmpleadosFiltrados}"
                          SelectedItem="{Binding EmpleadoSeleccionado}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          AlternatingRowBackground="#F8F9FA">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CI" 
                                          Binding="{Binding CiEmpleado}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Nombres" 
                                          Binding="{Binding NombresEmpleado}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Apellidos" 
                                          Binding="{Binding ApellidosEmpleado}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Telefono" 
                                          Binding="{Binding TelefonoEmpleado}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Correo" 
                                          Binding="{Binding CorreoEmpleado}" 
                                          Width="200"/>
                        <DataGridCheckBoxColumn Header="Activo" 
                                              Binding="{Binding EsActivoEmpleado}" 
                                              Width="80"/>
                        
                        <DataGridTemplateColumn Header="Acciones" Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="??? Ver"
                                                Command="{Binding DataContext.VerDetalleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#3498DB"
                                                Foreground="White"
                                                Padding="10,5"
                                                Margin="2"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                        <Button Content="?? Editar"
                                                Command="{Binding DataContext.EditarEmpleadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#F39C12"
                                                Foreground="White"
                                                Padding="10,5"
                                                Margin="2"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                        <Button Content="?? Usuario"
                                                Command="{Binding DataContext.GestionarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#9B59B6"
                                                Foreground="White"
                                                Padding="10,5"
                                                Margin="2"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Footer con estadisticas -->
                <Border Grid.Row="2" 
                        Background="#ECF0F1" 
                        Padding="15"
                        Margin="0,15,0,0"
                        CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total empleados: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalEmpleados}" Foreground="#27AE60" FontWeight="Bold"/>
                        <TextBlock Text="  |  Activos: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding EmpleadosActivos}" Foreground="#3498DB" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
