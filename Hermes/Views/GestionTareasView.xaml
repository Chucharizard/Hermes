<UserControl x:Class="Hermes.Views.GestionTareasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:GestionTareasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <converters:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para item de tarea seleccionado -->
        <Style x:Key="TareaListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#234e52"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d5a5a"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#1a4d4d"/>
                    <Setter Property="BorderBrush" Value="#50c878"/>
                    <Setter Property="BorderThickness" Value="0,0,3,1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid TextOptions.TextFormattingMode="Display"
          TextOptions.TextRenderingMode="ClearType"
          UseLayoutRounding="True"
          SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header compacto + EstadÃ­sticas inline + Nueva Tarea -->
        <Border Grid.Row="0" Background="#234e52" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Grid.Column="0"
                           Text="ðŸ”§ GestiÃ³n de Tareas"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryColor}"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- EstadÃ­sticas inline compactas -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Total -->
                    <Border Background="#50c878" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalTareas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Total"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#cd7f32" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TareasPendientes}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#50c878" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TareasCompletadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Completadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="#c45c4d" CornerRadius="12" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TareasVencidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- BotÃ³n Nueva Tarea -->
                <Button Grid.Column="2"
                        Content="âž• Nueva Tarea"
                        Command="{Binding AbrirNuevaTareaCommand}"
                        Style="{StaticResource SuccessButtonStyle}"
                        Padding="12,6"
                        FontSize="12"/>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- CALENDARIO SEMANAL MEJORADO -->
        <!-- ========================================== -->
        <Border Grid.Row="1" Background="#1a4d4d" BorderBrush="#50c878" BorderThickness="2" CornerRadius="10" Padding="18" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="{DynamicResource BackgroundDarkestColor}"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TÃ­tulo del calendario y navegaciÃ³n mejorado -->
                <Border Grid.Row="0" Background="#50c878" CornerRadius="8" Padding="12,8" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border Background="#2e8b57" CornerRadius="6" Padding="6" Margin="0,0,8,0">
                                <TextBlock Text="ðŸ“…" FontSize="16"/>
                            </Border>
                            <TextBlock Text="Calendario Semanal"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#2e8b57" CornerRadius="6" Padding="8,4" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TituloSemana}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <Button Grid.Column="2"
                                Content="â—€"
                                Command="{Binding SemanaAnteriorCommand}"
                                Background="#2e8b57"
                                Foreground="White"
                                Padding="12,6"
                                FontSize="12"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="0,0,6,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e6e3f"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="3"
                                Content="â–¶"
                                Command="{Binding SemanaSiguienteCommand}"
                                Background="#2e8b57"
                                Foreground="White"
                                Padding="12,6"
                                FontSize="12"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e6e3f"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- DÃ­as de la semana mejorados -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding DiasSemana}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#234e52"
                                    BorderBrush="#50c878"
                                    BorderThickness="1"
                                    Margin="3"
                                    Padding="10"
                                    CornerRadius="8"
                                    Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                                </Border.Effect>
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                  Command="{Binding DataContext.SeleccionarDiaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2d5a5a"/>
                                                <Setter Property="BorderBrush" Value="#50c878"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding EsSeleccionado}" Value="True">
                                                <Setter Property="Background" Value="#50c878"/>
                                                <Setter Property="BorderBrush" Value="#50c878"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel>
                                    <TextBlock Text="{Binding DiaNombre}"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="#95A5A6"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Text="{Binding DiaNumero}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource TextPrimaryColor}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Text="{Binding Indicador}"
                                               FontSize="22"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- LAYOUT MASTER-DETAIL CON COLUMNAS DINÃMICAS (60/40) -->
        <!-- ========================================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Lista de tareas (master) -->
                <ColumnDefinition Width="{Binding MostrarPanelEdicion, Converter={StaticResource BoolToGridLengthConverter}, ConverterParameter=Lista}"/>
                <!-- Separador -->
                <ColumnDefinition Width="{Binding MostrarPanelEdicion, Converter={StaticResource BoolToGridLengthConverter}, ConverterParameter=Separador}"/>
                <!-- Panel de ediciÃ³n (detail) -->
                <ColumnDefinition Width="{Binding MostrarPanelEdicion, Converter={StaticResource BoolToGridLengthConverter}, ConverterParameter=Panel}"/>
            </Grid.ColumnDefinitions>

            <!-- ========================================== -->
            <!-- MASTER: LISTA DE TAREAS COMPACTA -->
            <!-- ========================================== -->
            <Border Grid.Column="0" Background="#234e52" CornerRadius="8" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- BÃºsqueda y Refrescar -->
                    <StackPanel Grid.Row="0" Margin="12,12,12,0">
                        <TextBox Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Tag="ðŸ” Buscar tareas..."
                                 Margin="0,0,0,8"/>

                        <Button Content="ðŸ”„ Actualizar"
                                Command="{Binding CargarTareasCommand}"
                                Style="{StaticResource InfoButtonStyle}"
                                Padding="10,6"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Lista de tareas scrollable -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                        <ItemsControl ItemsSource="{Binding TareasFiltradas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Tarjeta de tarea mejorada con diseÃ±o mÃ¡s bonito -->
                                    <Border Background="#1a4d4d"
                                            BorderBrush="#50c878"
                                            BorderThickness="0,0,0,3"
                                            CornerRadius="10"
                                            Padding="15"
                                            Margin="12,0,12,12"
                                            Cursor="Hand"
                                            MouseDown="TareaItem_MouseDown"
                                            Tag="{Binding}">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="{DynamicResource BackgroundDarkestColor}"/>
                                        </Border.Effect>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2d5a5a"/>
                                                        <Setter Property="BorderBrush" Value="#50c878"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Fila 1: Badges de Estado y Prioridad con mejor diseÃ±o -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                        CornerRadius="10"
                                                        Padding="8,3"
                                                        Margin="0,0,8,0">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="10"
                                                        Padding="8,3"
                                                        Margin="0,0,8,0">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Background="#2d5a5a" CornerRadius="8" Padding="6,3">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ“…" FontSize="10" Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy}"
                                                                   FontSize="10"
                                                                   Foreground="#95A5A6"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- Fila 2: TÃ­tulo de la tarea con mejor tipografÃ­a -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource TextPrimaryColor}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,8"/>

                                            <!-- Fila 3: Emisor â†’ Receptor con iconos -->
                                            <Border Grid.Row="2" Background="#234e52" CornerRadius="6" Padding="8,6" Margin="0,0,0,8">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Background="#50c878" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                                        <TextBlock Text="ðŸ“¤" FontSize="11"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                               Foreground="#50c878"
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"/>

                                                    <TextBlock Text=" â†’ " Foreground="#95A5A6" FontSize="11" Margin="6,0" VerticalAlignment="Center"/>

                                                    <Border Background="#50c878" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                                        <TextBlock Text="ðŸ“¥" FontSize="11"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding UsuarioReceptor.Empleado.NombresEmpleado}"
                                                               Foreground="#50c878"
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Fila 4: Botones de acciÃ³n rÃ¡pida mejorados -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                                <Button Content="âœ"
                                                        Command="{Binding DataContext.EditarTareaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#cd7f32"
                                                        Foreground="White"
                                                        Width="24"
                                                        Height="24"
                                                        FontSize="11"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Margin="0,0,4,0"
                                                        ToolTip="Editar tarea">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#b87333"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <Button Content="ðŸ—‘"
                                                        Command="{Binding DataContext.EliminarTareaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#c45c4d"
                                                        Foreground="White"
                                                        Width="24"
                                                        Height="24"
                                                        FontSize="11"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        ToolTip="Eliminar tarea">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- DETAIL: PANEL DE EDICIÃ“N / NUEVA TAREA -->
            <!-- ========================================== -->
            <Border Grid.Column="2" Background="#234e52" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                </Border.Effect>

                <Grid>
                    <!-- Panel de Nueva Tarea con ViewModel propio -->
                    <ContentPresenter Content="{Binding ViewModelNuevaTarea}">
                        <ContentPresenter.Resources>
                            <DataTemplate DataType="{x:Type viewmodels:NuevaTareaViewModel}">
                                <views:NuevaTareaPanel/>
                            </DataTemplate>
                        </ContentPresenter.Resources>
                    </ContentPresenter>

                    <!-- Mostrar mensaje cuando no hay tarea seleccionada Y no es nueva tarea -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding TareaSeleccionada}" Value="{x:Null}"/>
                                            <Condition Binding="{Binding EsNuevaTarea}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="ðŸ”§"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   Opacity="0.3"
                                   Foreground="{DynamicResource TextPrimaryColor}"/>
                        <TextBlock Text="Selecciona una tarea"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="para editarla y gestionarla"
                                   FontSize="14"
                                   Foreground="#95A5A6"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Panel de EdiciÃ³n cuando hay tarea seleccionada Y NO es nueva tarea -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding EsNuevaTarea}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Style>

                        <StackPanel>
                            <!-- Header compacto y profesional -->
                            <Border Background="#1a4d4d" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="{DynamicResource BackgroundDarkestColor}"/>
                                </Border.Effect>
                                <Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Border Background="#50c878" CornerRadius="6" Padding="8" Margin="0,0,12,0">
                                            <TextBlock Text="ðŸ“‹" FontSize="18"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Editar Tarea"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource TextPrimaryColor}"/>
                                            <TextBlock Text="Modifica los detalles de la tarea"
                                                       FontSize="10"
                                                       Foreground="#95A5A6"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Content="âœ–"
                                            Command="{Binding CerrarPanelCommand}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="#c45c4d"
                                            Foreground="White"
                                            Width="30"
                                            Height="30"
                                            FontSize="14"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Cerrar panel">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- SecciÃ³n: InformaciÃ³n BÃ¡sica -->
                            <Border Background="#1a4d4d" BorderBrush="#50c878" BorderThickness="2" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                                <Border.Effect>
