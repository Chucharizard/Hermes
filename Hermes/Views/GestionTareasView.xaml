<UserControl x:Class="Hermes.Views.GestionTareasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:GestionTareasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para item de tarea seleccionado -->
        <Style x:Key="TareaListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F8FA"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="0,0,3,1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header compacto + EstadÃ­sticas inline + Nueva Tarea -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Grid.Column="0"
                           Text="ðŸ”§ GestiÃ³n de Tareas"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- EstadÃ­sticas inline compactas -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Total -->
                    <Border Background="#3498DB" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalTareas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Total"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#F39C12" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TareasPendientes}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#27AE60" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TareasCompletadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Completadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="#E74C3C" CornerRadius="12" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TareasVencidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- BotÃ³n Nueva Tarea -->
                <Button Grid.Column="2"
                        Content="âž• Nueva Tarea"
                        Command="{Binding AbrirNuevaTareaCommand}"
                        Style="{StaticResource SuccessButtonStyle}"
                        Padding="12,6"
                        FontSize="12"/>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- CALENDARIO SEMANAL -->
        <!-- ========================================== -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TÃ­tulo del calendario y navegaciÃ³n -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="ðŸ“… Calendario Semanal"
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding TituloSemana}"
                               FontSize="12"
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="2"
                            Content="â†"
                            Command="{Binding SemanaAnteriorCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            Margin="0,0,6,0"/>

                    <Button Grid.Column="3"
                            Content="â†’"
                            Command="{Binding SemanaSiguienteCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="10,4"
                            FontSize="14"/>
                </Grid>

                <!-- DÃ­as de la semana -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding DiasSemana}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Margin="2"
                                    Padding="8"
                                    CornerRadius="6"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                  Command="{Binding DataContext.SeleccionarDiaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F8FA"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding EsSeleccionado}" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel>
                                    <TextBlock Text="{Binding DiaNombre}"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="#7F8C8D"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Text="{Binding DiaNumero}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Text="{Binding Indicador}"
                                               FontSize="20"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- LAYOUT MASTER-DETAIL (Tipo Gmail/Outlook) -->
        <!-- ========================================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Lista de tareas (master) -->
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="12"/>
                <!-- Detalle de tarea (detail) -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========================================== -->
            <!-- MASTER: LISTA DE TAREAS COMPACTA -->
            <!-- ========================================== -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- BÃºsqueda y Refrescar -->
                    <StackPanel Grid.Row="0" Margin="12,12,12,0">
                        <TextBox Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Tag="ðŸ” Buscar tareas..."
                                 Margin="0,0,0,8"/>

                        <Button Content="ðŸ”„ Actualizar"
                                Command="{Binding CargarTareasCommand}"
                                Style="{StaticResource InfoButtonStyle}"
                                Padding="10,6"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Lista de tareas scrollable -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                        <ItemsControl ItemsSource="{Binding TareasFiltradas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Item compacto de tarea tipo Gmail -->
                                    <Border Style="{StaticResource TareaListItemStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Fila 1: Badges de Estado y Prioridad -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                                                <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,2"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,2">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Text="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy}"
                                                           FontSize="9"
                                                           Foreground="#95A5A6"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <!-- Fila 2: TÃ­tulo de la tarea -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>

                                            <!-- Fila 3: Emisor â†’ Receptor -->
                                            <TextBlock Grid.Row="2"
                                                       FontSize="10"
                                                       Foreground="#7F8C8D"
                                                       Margin="0,0,0,6">
                                                <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}" Foreground="#E67E22" FontWeight="SemiBold"/>
                                                <Run Text=" â†’ "/>
                                                <Run Text="{Binding UsuarioReceptor.Empleado.NombresEmpleado}" Foreground="#27AE60" FontWeight="SemiBold"/>
                                            </TextBlock>

                                            <!-- Fila 4: Botones de acciÃ³n rÃ¡pida -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                                <Button Content="âœ"
                                                        Command="{Binding DataContext.EditarTareaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#F39C12"
                                                        Foreground="White"
                                                        Width="24"
                                                        Height="24"
                                                        FontSize="11"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Margin="0,0,4,0"
                                                        ToolTip="Editar tarea">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#E67E22"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <Button Content="ðŸ—‘"
                                                        Command="{Binding DataContext.EliminarTareaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#E74C3C"
                                                        Foreground="White"
                                                        Width="24"
                                                        Height="24"
                                                        FontSize="11"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        ToolTip="Eliminar tarea">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- DETAIL: PANEL DE EDICIÃ“N DE TAREA -->
            <!-- ========================================== -->
            <Border Grid.Column="2" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <!-- Mostrar mensaje cuando no hay tarea seleccionada -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="ðŸ”§"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   Opacity="0.3"/>
                        <TextBlock Text="Selecciona una tarea"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#95A5A6"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="para editarla y gestionarla"
                                   FontSize="14"
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Panel de EdiciÃ³n cuando hay tarea seleccionada -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Style>

                        <StackPanel Padding="20">
                            <!-- Encabezado -->
                            <TextBlock Text="ðŸ“‹ Editar Tarea"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,20"/>

                            <!-- TÃ­tulo -->
                            <TextBlock Text="TÃ­tulo:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding TituloEditable, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Margin="0,0,0,15"/>

                            <!-- DescripciÃ³n -->
                            <TextBlock Text="DescripciÃ³n:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding DescripcionEditable, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="100"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,15"/>

                            <!-- Estado y Prioridad (Grid 2 columnas) -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Estado -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Estado:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding EstadosDisponibles}"
                                              SelectedItem="{Binding EstadoEditable}"
                                              Style="{StaticResource ModernComboBoxStyle}"/>
                                </StackPanel>

                                <!-- Prioridad -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Prioridad:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding PrioridadesDisponibles}"
                                              SelectedItem="{Binding PrioridadEditable}"
                                              Style="{StaticResource ModernComboBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Fecha Inicio y Fecha LÃ­mite (Grid 2 columnas) -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Fecha Inicio -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha Inicio:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <DatePicker SelectedDate="{Binding FechaInicioEditable}"
                                                Style="{StaticResource ModernDatePickerStyle}"/>
                                </StackPanel>

                                <!-- Fecha LÃ­mite -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Fecha LÃ­mite:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <DatePicker SelectedDate="{Binding FechaLimiteEditable}"
                                                Style="{StaticResource ModernDatePickerStyle}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Emisor (solo lectura) -->
                            <TextBlock Text="Emisor:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="#ECF0F1"
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10,8"
                                    Margin="0,0,0,15">
                                <TextBlock Text="{Binding EmisorInfo}"
                                           Foreground="#7F8C8D"
                                           FontStyle="Italic"/>
                            </Border>

                            <!-- Receptor -->
                            <TextBlock Text="Receptor:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding UsuariosDisponibles}"
                                      SelectedItem="{Binding UsuarioReceptorEditable}"
                                      DisplayMemberPath="Empleado.NombresEmpleado"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      Margin="0,0,0,20"/>

                            <!-- Botones de acciÃ³n -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="ðŸ’¾ Guardar Cambios"
                                        Command="{Binding GuardarCambiosCommand}"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Padding="12,10"
                                        FontSize="13"/>

                                <Button Grid.Column="2"
                                        Content="ðŸ—‘ Eliminar Tarea"
                                        Command="{Binding EliminarTareaCommand}"
                                        CommandParameter="{Binding TareaSeleccionada}"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Padding="12,10"
                                        FontSize="13"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
