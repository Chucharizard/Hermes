<UserControl x:Class="Hermes.Views.BandejaTareasEnviadasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasEnviadasViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="ðŸ“¤ Bandeja de Tareas Enviadas"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>
                <TextBlock Text="Tareas que has asignado a otros usuarios"
                           FontSize="14"
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- EstadÃ­sticas -->
        <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <UniformGrid Rows="1" Columns="5">
                <!-- Total Enviadas -->
                <Border Background="#3498DB" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalEnviadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Enviadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Pendientes -->
                <Border Background="#F39C12" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalPendientes}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Pendientes"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Completadas -->
                <Border Background="#27AE60" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalCompletadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Completadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Observadas -->
                <Border Background="#E74C3C" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalObservadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Observadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Archivadas -->
                <Border Background="#95A5A6" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalArchivadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Archivadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Row="2" Background="White" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros y bÃºsqueda -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             Padding="10"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="ðŸ” Buscar por tÃ­tulo, descripciÃ³n o receptor..."
                                                                   Foreground="#95A5A6"
                                                                   Padding="10,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding EstadosFiltro}"
                              SelectedItem="{Binding FiltroEstado}"
                              Width="150"
                              Margin="10,0,10,0"
                              FontSize="14"
                              Padding="10"
                              BorderBrush="#BDC3C7"/>

                    <Button Grid.Column="2"
                            Content="ðŸ”„ Refrescar"
                            Command="{Binding RefrescarCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="14"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="3"
                            Content="âž• Nueva Tarea"
                            Command="{Binding AbrirNuevaTareaCommand}"
                            Background="#27AE60"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding TareasFiltradas}"
                          SelectedItem="{Binding TareaSeleccionada}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          FontSize="13"
                          RowHeight="35"
                          AlternatingRowBackground="#F8F9FA"
                          BorderThickness="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TÃ­tulo"
                                          Binding="{Binding TituloTarea}"
                                          Width="2*"/>

                        <DataGridTextColumn Header="Receptor"
                                          Width="1.5*">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="UsuarioReceptor.Empleado.NombresEmpleado"/>
                                    <Binding Path="UsuarioReceptor.Empleado.ApellidosEmpleado"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Estado"
                                          Binding="{Binding EstadoTarea}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Prioridad"
                                          Binding="{Binding PrioridadTarea}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Fecha Inicio"
                                          Binding="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Fecha LÃ­mite"
                                          Binding="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                          Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botones de acciÃ³n -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="ðŸ‘ Ver Detalle"
                            Command="{Binding VerDetalleCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ“¦ Archivar Tarea"
                            Command="{Binding ArchivarTareaCommand}"
                            Background="#95A5A6"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
