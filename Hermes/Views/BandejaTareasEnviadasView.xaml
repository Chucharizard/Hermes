<UserControl x:Class="Hermes.Views.BandejaTareasEnviadasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasEnviadasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <converters:NombreToInitialsConverter x:Key="NombreToInitialsConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ“¤ Bandeja de Tareas Enviadas"
                           Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Tareas que has asignado a otros usuarios"
                           Style="{StaticResource SubtitleTextStyle}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- EstadÃ­sticas -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,0,15">
            <UniformGrid Rows="1" Columns="5">
                <!-- Total Enviadas -->
                <Border Background="#3498DB" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalEnviadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Enviadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Pendientes -->
                <Border Background="#F39C12" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalPendientes}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Pendientes"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Completadas -->
                <Border Background="#27AE60" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalCompletadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Completadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Observadas -->
                <Border Background="#E74C3C" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalObservadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Observadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Archivadas -->
                <Border Background="#95A5A6" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalArchivadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Archivadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filtros y bÃºsqueda -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Tag="ðŸ” Buscar por tÃ­tulo, descripciÃ³n o receptor..."/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding EstadosFiltro}"
                              SelectedItem="{Binding FiltroEstado}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="150"
                              Margin="10,0,10,0"/>

                    <Button Grid.Column="2"
                            Content="ðŸ”„ Refrescar"
                            Command="{Binding RefrescarCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="15,8"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="3"
                            Content="âž• Nueva Tarea"
                            Command="{Binding AbrirNuevaTareaCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="15,8"/>
                </Grid>

                <!-- Cards de Tareas -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TareasFiltradas}">
                        <!-- Panel: Grid de 3 columnas -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- Template del Card -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TareaCardStyle}"
                                        BorderBrush="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                        MouseLeftButtonDown="Card_MouseLeftButtonDown"
                                        Tag="{Binding}">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/> <!-- Header -->
                                            <RowDefinition Height="Auto"/> <!-- TÃ­tulo -->
                                            <RowDefinition Height="Auto"/> <!-- Usuario -->
                                            <RowDefinition Height="Auto"/> <!-- Metadata -->
                                            <RowDefinition Height="Auto"/> <!-- Acciones -->
                                        </Grid.RowDefinitions>

                                        <!-- Header con Prioridad y Estado -->
                                        <StackPanel Grid.Row="0" Style="{StaticResource TareaCardHeaderStyle}" Margin="15,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Badge de Prioridad -->
                                                <Border Grid.Column="0"
                                                        Style="{StaticResource PrioridadBadgeStyle}"
                                                        Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               Foreground="White"
                                                               FontSize="11"
                                                               FontWeight="Bold"/>
                                                </Border>

                                                <!-- Badge de Estado -->
                                                <Border Grid.Column="1"
                                                        Style="{StaticResource EstadoBadgeStyle}"
                                                        Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}">
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               Foreground="White"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </StackPanel>

                                        <!-- TÃ­tulo de la Tarea -->
                                        <StackPanel Grid.Row="1" Margin="15,12,15,8">
                                            <TextBlock Text="{Binding TituloTarea}"
                                                       Style="{StaticResource TareaCardTitleStyle}"/>
                                            <TextBlock Text="{Binding DescripcionTarea}"
                                                       Style="{StaticResource TareaCardDescriptionStyle}"/>
                                        </StackPanel>

                                        <!-- InformaciÃ³n del Receptor -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,0,15,8">
                                            <!-- Avatar -->
                                            <Border Style="{StaticResource AvatarCircleStyle}">
                                                <TextBlock Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource NombreToInitialsConverter}">
                                                            <Binding Path="UsuarioReceptor.Empleado.NombresEmpleado"/>
                                                            <Binding Path="UsuarioReceptor.Empleado.ApellidosEmpleado"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>

                                            <!-- Nombre del Receptor -->
                                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#2C3E50">
                                                    <Run Text="{Binding UsuarioReceptor.Empleado.NombresEmpleado}"/>
                                                    <Run Text="{Binding UsuarioReceptor.Empleado.ApellidosEmpleado}"/>
                                                </TextBlock>
                                                <TextBlock Text="Asignado a"
                                                           FontSize="11"
                                                           Foreground="#95A5A6"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Metadata (Fechas) -->
                                        <StackPanel Grid.Row="3" Margin="15,0,15,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Fecha Inicio -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“…" Margin="0,0,4,0" Style="{StaticResource MetadataTextStyle}"/>
                                                    <TextBlock Text="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy}"
                                                               Style="{StaticResource MetadataTextStyle}"/>
                                                </StackPanel>

                                                <!-- Fecha LÃ­mite -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="â°" Margin="0,0,4,0" Style="{StaticResource MetadataTextStyle}"/>
                                                    <TextBlock Text="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                                               Style="{StaticResource MetadataTextStyle}"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Botones de AcciÃ³n -->
                                        <Border Grid.Row="4"
                                                Background="#FAFBFC"
                                                Padding="15,10"
                                                BorderBrush="#ECF0F1"
                                                BorderThickness="0,1,0,0">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Ver"
                                                        Command="{Binding DataContext.VerDetalleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource InfoButtonStyle}"
                                                        Padding="12,5"
                                                        Margin="0,0,5,0"
                                                        FontSize="12"/>
                                                <Button Content="ðŸ“¦"
                                                        Command="{Binding DataContext.ArchivarTareaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource CompactButtonStyle}"
                                                        Padding="12,5"
                                                        FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
