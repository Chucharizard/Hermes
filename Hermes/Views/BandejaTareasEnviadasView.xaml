<UserControl x:Class="Hermes.Views.BandejaTareasEnviadasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasEnviadasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para item de tarea seleccionado -->
        <Style x:Key="TareaListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F8FA"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="0,0,3,1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header compacto + EstadÃ­sticas inline -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Grid.Column="0"
                           Text="ðŸ“¤ Bandeja de Tareas Enviadas"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- EstadÃ­sticas inline compactas -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Total -->
                    <Border Background="#3498DB" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalEnviadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Total"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#F39C12" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalPendientes}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#27AE60" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalCompletadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Completadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Background="#E74C3C" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalObservadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Observadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Archivadas -->
                    <Border Background="#95A5A6" CornerRadius="12" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalArchivadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Archivadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- LAYOUT MASTER-DETAIL (Tipo Gmail/Outlook) -->
        <!-- ========================================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Lista de tareas (master) -->
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="12"/>
                <!-- Detalle de tarea (detail) -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========================================== -->
            <!-- MASTER: LISTA DE TAREAS COMPACTA -->
            <!-- ========================================== -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filtros y bÃºsqueda compactos -->
                    <StackPanel Grid.Row="0" Margin="12,12,12,0">
                        <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Tag="ðŸ” Buscar tareas..."
                                 Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding EstadosFiltro}"
                                      SelectedItem="{Binding FiltroEstado}"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      Margin="0,0,8,0"/>

                            <Button Grid.Column="1"
                                    Content="ðŸ”„"
                                    Command="{Binding RefrescarCommand}"
                                    Style="{StaticResource InfoButtonStyle}"
                                    Padding="10,6"
                                    Margin="0,0,8,0"
                                    ToolTip="Refrescar"/>

                            <Button Grid.Column="2"
                                    Content="âž•"
                                    Command="{Binding AbrirNuevaTareaCommand}"
                                    Style="{StaticResource SuccessButtonStyle}"
                                    Padding="10,6"
                                    ToolTip="Nueva Tarea"/>
                        </Grid>
                    </StackPanel>

                    <!-- Lista de tareas scrollable -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                        <ItemsControl ItemsSource="{Binding TareasFiltradas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Item compacto de tarea tipo Gmail -->
                                    <Border Style="{StaticResource TareaListItemStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Fila 1: Badges de Estado y Prioridad -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                                                <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,2"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,2">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Text="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                                           FontSize="9"
                                                           Foreground="#95A5A6"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <!-- Fila 2: TÃ­tulo de la tarea -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>

                                            <!-- Fila 3: DescripciÃ³n y Receptor -->
                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DescripcionTarea}"
                                                           FontSize="10"
                                                           Foreground="#7F8C8D"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxHeight="15"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1"
                                                           FontSize="10"
                                                           Foreground="#27AE60"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0">
                                                    <Run Text="Para:"/>
                                                    <Run Text="{Binding UsuarioReceptor.Empleado.NombresEmpleado}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- DETAIL: VISTA DE DETALLE DE TAREA -->
            <!-- ========================================== -->
            <Border Grid.Column="2" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <!-- Mostrar mensaje cuando no hay tarea seleccionada -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="ðŸ“‹"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   Opacity="0.3"/>
                        <TextBlock Text="Selecciona una tarea"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#95A5A6"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="para ver los detalles"
                                   FontSize="14"
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Mostrar DetalleTareaView cuando hay tarea seleccionada -->
                    <ContentControl Content="{Binding DetalleViewModel}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                        <ContentControl.ContentTemplate>
                            <DataTemplate>
                                <views:DetalleTareaView/>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
