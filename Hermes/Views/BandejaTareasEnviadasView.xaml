<UserControl x:Class="Hermes.Views.BandejaTareasEnviadasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasEnviadasViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ“¤ Bandeja de Tareas Enviadas"
                           Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Tareas que has asignado a otros usuarios"
                           Style="{StaticResource SubtitleTextStyle}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- EstadÃ­sticas -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,0,15">
            <UniformGrid Rows="1" Columns="5">
                <!-- Total Enviadas -->
                <Border Background="#3498DB" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalEnviadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Enviadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Pendientes -->
                <Border Background="#F39C12" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalPendientes}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Pendientes"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Completadas -->
                <Border Background="#27AE60" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalCompletadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Completadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Observadas -->
                <Border Background="#E74C3C" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalObservadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Observadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Archivadas -->
                <Border Background="#95A5A6" CornerRadius="8" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalArchivadas}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Archivadas"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros y bÃºsqueda -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Tag="ðŸ” Buscar por tÃ­tulo, descripciÃ³n o receptor..."/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding EstadosFiltro}"
                              SelectedItem="{Binding FiltroEstado}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="150"
                              Margin="10,0,10,0"/>

                    <Button Grid.Column="2"
                            Content="ðŸ”„ Refrescar"
                            Command="{Binding RefrescarCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="15,8"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="3"
                            Content="âž• Nueva Tarea"
                            Command="{Binding AbrirNuevaTareaCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="15,8"/>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding TareasFiltradas}"
                          SelectedItem="{Binding TareaSeleccionada}"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}"
                          RowStyle="{StaticResource ModernDataGridRowStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TÃ­tulo"
                                          Binding="{Binding TituloTarea}"
                                          Width="2*"/>

                        <DataGridTextColumn Header="Receptor"
                                          Width="1.5*">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="UsuarioReceptor.Empleado.NombresEmpleado"/>
                                    <Binding Path="UsuarioReceptor.Empleado.ApellidosEmpleado"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Estado"
                                          Binding="{Binding EstadoTarea}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Prioridad"
                                          Binding="{Binding PrioridadTarea}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Fecha Inicio"
                                          Binding="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Fecha LÃ­mite"
                                          Binding="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                          Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botones de acciÃ³n -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="ðŸ‘ Ver Detalle"
                            Command="{Binding VerDetalleCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Padding="15,8"
                            Margin="0,0,10,0"/>

                    <Button Content="ðŸ“¦ Archivar Tarea"
                            Command="{Binding ArchivarTareaCommand}"
                            Style="{StaticResource CompactButtonStyle}"
                            Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
