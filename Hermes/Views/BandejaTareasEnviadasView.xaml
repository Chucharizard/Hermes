<UserControl x:Class="Hermes.Views.BandejaTareasEnviadasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasEnviadasViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Style="{StaticResource CardStyle}"
                Padding="25">
            <StackPanel>
                <TextBlock Text="ðŸ“¤ Bandeja de Tareas Enviadas"
                           Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Tareas que has asignado a otros usuarios"
                           Style="{StaticResource MutedTextStyle}"/>
            </StackPanel>
        </Border>

        <!-- EstadÃ­sticas -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Padding="15">
            <UniformGrid Rows="1" Columns="5">
                <!-- Total Enviadas -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource PrimaryBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalEnviadas}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Enviadas"
                                   FontSize="13"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Pendientes -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource WarningBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalPendientes}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Pendientes"
                                   FontSize="13"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Completadas -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource AccentBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalCompletadas}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Completadas"
                                   FontSize="13"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Observadas -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource DangerBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalObservadas}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Observadas"
                                   FontSize="13"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Archivadas -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource SecondaryTextBrush}"
                        Margin="0">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalArchivadas}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Archivadas"
                                   FontSize="13"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros y bÃºsqueda -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="ðŸ” Buscar por tÃ­tulo, descripciÃ³n o receptor..."
                                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                                   Padding="10,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding EstadosFiltro}"
                              SelectedItem="{Binding FiltroEstado}"
                              Width="150"
                              Margin="10,0,10,0"
                              Style="{StaticResource ModernComboBoxStyle}"/>

                    <Button Grid.Column="2"
                            Content="ðŸ”„ Refrescar"
                            Command="{Binding RefrescarCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="3"
                            Content="âž• Nueva Tarea"
                            Command="{Binding AbrirNuevaTareaCommand}"
                            Style="{StaticResource SuccessButtonStyle}"/>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding TareasFiltradas}"
                          SelectedItem="{Binding TareaSeleccionada}"
                          Style="{StaticResource ModernDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TÃ­tulo"
                                          Binding="{Binding TituloTarea}"
                                          Width="2*"/>

                        <DataGridTextColumn Header="Receptor"
                                          Width="1.5*">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="UsuarioReceptor.Empleado.NombresEmpleado"/>
                                    <Binding Path="UsuarioReceptor.Empleado.ApellidosEmpleado"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Estado"
                                          Binding="{Binding EstadoTarea}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Prioridad"
                                          Binding="{Binding PrioridadTarea}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Fecha Inicio"
                                          Binding="{Binding FechaInicioTarea, StringFormat=dd/MM/yyyy}"
                                          Width="*"/>

                        <DataGridTextColumn Header="Fecha LÃ­mite"
                                          Binding="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                          Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botones de acciÃ³n -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="ðŸ‘ Ver Detalle"
                            Command="{Binding VerDetalleCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Content="ðŸ“¦ Archivar Tarea"
                            Command="{Binding ArchivarTareaCommand}"
                            Background="{DynamicResource SecondaryTextBrush}"
                            Foreground="White"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
