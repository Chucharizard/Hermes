                                                           Foreground="{DynamicResource TextSecondaryColor}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- Emisor -->
                                            <Border Grid.Row="2"
                                                    Background="{DynamicResource BackgroundDark}"
                                                    CornerRadius="8"
                                                    Padding="6,4">
                                                <TextBlock FontSize="10" Foreground="{DynamicResource TextSecondaryColor}">
                                                    <Run Text="ðŸ‘¤ De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                         Foreground="{DynamicResource WarningColor}"
                                                         FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

