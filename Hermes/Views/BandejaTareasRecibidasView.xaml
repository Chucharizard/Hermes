<UserControl x:Class="Hermes.Views.BandejaTareasRecibidasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasRecibidasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <converters:TareaSeleccionadaToGridLengthConverter x:Key="TareaSeleccionadaToGridLengthConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para item de tarea (tema morado medianoche) -->
        <Style x:Key="TareaListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.4" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header compacto + EstadÃ­sticas inline (tema morado medianoche) -->
        <Border Grid.Row="0" CornerRadius="12" Padding="18,12" Margin="0,0,0,15" BorderBrush="#30FFFFFF" BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a2e" Offset="0"/>
                    <GradientStop Color="#16213e" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Grid.Column="0"
                           Text="ðŸ“¥ Bandeja de Tareas Recibidas"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- EstadÃ­sticas inline compactas -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Total -->
                    <Border Background="#9B59B6" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalRecibidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Total"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#F39C12" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalPendientes}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#27AE60" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalCompletadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Completadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="#E67E22" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalVencidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Background="#E74C3C" CornerRadius="12" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalObservadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Observadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- VISTA DE LISTA (Mostrar cuando no hay tarea seleccionada) -->
        <!-- ========================================== -->
        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- LISTA DE TAREAS (tema morado medianoche) -->
            <Border CornerRadius="12" Padding="12" BorderBrush="#30FFFFFF" BorderThickness="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0f1419" Offset="0"/>
                        <GradientStop Color="#0a0a15" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filtros y bÃºsqueda en una sola lÃ­nea -->
                    <Grid Grid.Row="0" Margin="12,12,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Tag="ðŸ” Buscar tareas..."
                                 Margin="0,0,8,0"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding EstadosFiltro}"
                                  SelectedItem="{Binding FiltroEstado}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  Margin="0,0,8,0"/>

                        <Button Grid.Column="2"
                                Content="ðŸ”„"
                                Command="{Binding RefrescarCommand}"
                                Style="{StaticResource InfoButtonStyle}"
                                Width="45"
                                ToolTip="Refrescar"/>
                    </Grid>

                    <!-- Lista de tareas en grid de 2 columnas -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                        <ItemsControl ItemsSource="{Binding TareasFiltradas}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Item de tarea mejorado con mejor organizaciÃ³n -->
                                    <Border Style="{StaticResource TareaListItemStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Fila 1: TÃ­tulo de la tarea -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFFFFF"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,8"/>

                                            <!-- Separador sutil -->
                                            <Border Grid.Row="1"
                                                   Height="1"
                                                   Background="#30FFFFFF"
                                                   Margin="0,0,0,8"/>

                                            <!-- Fila 2: Badges y Fecha -->
                                            <Grid Grid.Row="2" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                            CornerRadius="10"
                                                            Padding="8,4"
                                                            Margin="0,0,6,0">
                                                        <TextBlock Text="{Binding EstadoTarea}"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                    </Border>

                                                    <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                            CornerRadius="10"
                                                            Padding="8,4">
                                                        <TextBlock Text="{Binding PrioridadTarea}"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="ðŸ“…"
                                                              FontSize="12"
                                                              Margin="0,0,4,0"
                                                              Opacity="0.7"/>
                                                    <TextBlock Text="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                                               FontSize="11"
                                                               Foreground="#B0B8C8"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Fila 3: DescripciÃ³n y Emisor -->
                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DescripcionTarea}"
                                                           FontSize="12"
                                                           Foreground="#B0B8C8"
                                                           Opacity="0.85"
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,12,0"/>

                                                <Border Grid.Column="1"
                                                       Background="#16213e"
                                                       CornerRadius="12"
                                                       Padding="10,6">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ‘¤"
                                                                  FontSize="11"
                                                                  Margin="0,0,4,0"
                                                                  Opacity="0.8"/>
                                                        <TextBlock FontSize="11"
                                                                   Foreground="#B0B8C8">
                                                            <Run Text="De:"/>
                                                            <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                                Foreground="#F39C12"
                                                                FontWeight="SemiBold"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- VISTA DE DETALLE COMPLETO (Reemplazo total estilo Teams - tema morado medianoche) -->
            <Border CornerRadius="12" Padding="0" BorderBrush="#30FFFFFF" BorderThickness="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1a1a2e" Offset="0"/>
                        <GradientStop Color="#16213e" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- BotÃ³n Volver -->
                    <Border Grid.Row="0" Padding="12" BorderBrush="#30FFFFFF" BorderThickness="0,0,0,1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#0f1419" Offset="0"/>
                                <GradientStop Color="#0a0a15" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="â† Volver a Tareas Recibidas"
                                Command="{Binding VolverCommand}"
                                Style="{StaticResource InfoButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="12,8"
                                FontSize="12"/>
                    </Border>

                    <!-- Contenido del Detalle -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ContentControl Content="{Binding DetalleViewModel}">
                            <ContentControl.ContentTemplate>
                                <DataTemplate>
                                    <views:DetalleTareaView/>
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
