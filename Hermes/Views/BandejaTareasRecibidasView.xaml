<UserControl x:Class="Hermes.Views.BandejaTareasRecibidasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasRecibidasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para item de tarea seleccionado -->
        <Style x:Key="TareaListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F8FA"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="0,0,3,1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ðŸ“¥ Bandeja de Tareas Recibidas"
                           Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Tareas que te han asignado"
                           Style="{StaticResource SubtitleTextStyle}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- EstadÃ­sticas compactas -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="12,10" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>
            <UniformGrid Rows="1" Columns="5">
                <!-- Total Recibidas -->
                <Border Background="#9B59B6" CornerRadius="6" Margin="4" Padding="10,8">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalRecibidas}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total"
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Pendientes -->
                <Border Background="#F39C12" CornerRadius="6" Margin="4" Padding="10,8">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalPendientes}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Pendientes"
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Completadas -->
                <Border Background="#27AE60" CornerRadius="6" Margin="4" Padding="10,8">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalCompletadas}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Completadas"
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Vencidas -->
                <Border Background="#E67E22" CornerRadius="6" Margin="4" Padding="10,8">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalVencidas}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Vencidas"
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Observadas -->
                <Border Background="#E74C3C" CornerRadius="6" Margin="4" Padding="10,8">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalObservadas}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Observadas"
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- ========================================== -->
        <!-- LAYOUT MASTER-DETAIL (Tipo Gmail/Outlook) -->
        <!-- ========================================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Lista de tareas (master) -->
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="12"/>
                <!-- Detalle de tarea (detail) -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========================================== -->
            <!-- MASTER: LISTA DE TAREAS COMPACTA -->
            <!-- ========================================== -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filtros y bÃºsqueda compactos -->
                    <StackPanel Grid.Row="0" Margin="12,12,12,0">
                        <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Tag="ðŸ” Buscar tareas..."
                                 Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding EstadosFiltro}"
                                      SelectedItem="{Binding FiltroEstado}"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      Margin="0,0,8,0"/>

                            <Button Grid.Column="1"
                                    Content="ðŸ”„"
                                    Command="{Binding RefrescarCommand}"
                                    Style="{StaticResource InfoButtonStyle}"
                                    Padding="10,6"
                                    ToolTip="Refrescar"/>
                        </Grid>
                    </StackPanel>

                    <!-- Lista de tareas scrollable -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                        <ItemsControl ItemsSource="{Binding TareasFiltradas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Item compacto de tarea tipo Gmail -->
                                    <Border Style="{StaticResource TareaListItemStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Fila 1: Badges de Estado y Prioridad -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                                                <Border Background="{Binding EstadoTarea, Converter={StaticResource EstadoToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,2"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding EstadoTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,2">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Text="{Binding FechaLimiteTarea, StringFormat=dd/MM/yyyy}"
                                                           FontSize="9"
                                                           Foreground="#95A5A6"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </StackPanel>

                                            <!-- Fila 2: TÃ­tulo de la tarea -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>

                                            <!-- Fila 3: DescripciÃ³n y Emisor -->
                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DescripcionTarea}"
                                                           FontSize="10"
                                                           Foreground="#7F8C8D"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxHeight="15"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1"
                                                           FontSize="10"
                                                           Foreground="#3498DB"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0">
                                                    <Run Text="De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- DETAIL: VISTA DE DETALLE DE TAREA -->
            <!-- ========================================== -->
            <Border Grid.Column="2" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <!-- Mostrar mensaje cuando no hay tarea seleccionada -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="ðŸ“‹"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   Opacity="0.3"/>
                        <TextBlock Text="Selecciona una tarea"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#95A5A6"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="para ver los detalles"
                                   FontSize="14"
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Mostrar DetalleTareaView cuando hay tarea seleccionada -->
                    <views:DetalleTareaView DataContext="{Binding DetalleViewModel}">
                        <views:DetalleTareaView.Style>
                            <Style TargetType="views:DetalleTareaView">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DetalleViewModel}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TareaSeleccionada}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Style.MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding DetalleViewModel, Converter={x:Null}}" Value="False"/>
                                        <Condition Binding="{Binding TareaSeleccionada, Converter={x:Null}}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </Style.MultiDataTrigger>
                            </Style>
                        </views:DetalleTareaView.Style>
                    </views:DetalleTareaView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
