                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- COLUMNA 4: OBSERVADAS -->
            <!-- ========================================== -->
            <Border Grid.Column="3" Style="{StaticResource KanbanColumnStyle}" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de columna -->
                    <Border Grid.Row="0" Background="{DynamicResource DangerColor}" CornerRadius="8" Padding="10,8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘ï¸ OBSERVADO"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasObservadas.Count, StringFormat='{}{0} tareas'}"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>
