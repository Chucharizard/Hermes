                                                           Foreground="{DynamicResource WarningColor}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           TextWrapping="Wrap"/>
                                            </Grid>

                                            <!-- Emisor -->
                                            <Border Grid.Row="2"
                                                    Background="{DynamicResource BackgroundDark}"
                                                    CornerRadius="8"
                                                    Padding="6,4">
                                                <TextBlock FontSize="10" Foreground="{DynamicResource TextSecondaryColor}">
                                                    <Run Text="ðŸ‘¤ De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
