<UserControl x:Class="Hermes.Views.BandejaTareasRecibidasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters"
             xmlns:dd="urn:gong-wpf-dragdrop">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasRecibidasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para tarjetas Kanban (tema morado medianoche) -->
        <Style x:Key="KanbanCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.4" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para columnas Kanban -->
        <Style x:Key="KanbanColumnStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0f1419" Offset="0"/>
                        <GradientStop Color="#0a0a15" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header compacto + EstadÃ­sticas inline (tema morado medianoche) -->
        <Border Grid.Row="0" CornerRadius="12" Padding="18,12" Margin="0,0,0,15" BorderBrush="#30FFFFFF" BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a2e" Offset="0"/>
                    <GradientStop Color="#16213e" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Grid.Column="0"
                           Text="ðŸ“¥ Bandeja de Tareas Recibidas (Vista Kanban)"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- EstadÃ­sticas inline compactas -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Total -->
                    <Border Background="#9B59B6" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalRecibidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Total"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="#F39C12" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalPendientes}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="#27AE60" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalCompletadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Completadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="#E67E22" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalVencidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Background="#E74C3C" CornerRadius="12" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalObservadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Observadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Barra de bÃºsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                    Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     Tag="ðŸ” Buscar tareas..."
                     Margin="0,0,8,0"/>

            <Button Grid.Column="1"
                    Content="ðŸ”„ Refrescar"
                    Command="{Binding RefrescarCommand}"
                    Style="{StaticResource InfoButtonStyle}"
                    Padding="15,8"
                    FontSize="13"/>
        </Grid>

        <!-- TABLERO KANBAN - 4 Columnas -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- Pendiente -->
                <ColumnDefinition Width="*"/> <!-- Completado -->
                <ColumnDefinition Width="*"/> <!-- Vencido -->
                <ColumnDefinition Width="*"/> <!-- Observado -->
            </Grid.ColumnDefinitions>

            <!-- ========================================== -->
            <!-- COLUMNA 1: PENDIENTES -->
            <!-- ========================================== -->
            <Border Grid.Column="0" Style="{StaticResource KanbanColumnStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de columna -->
                    <Border Grid.Row="0" Background="#F39C12" CornerRadius="8" Padding="10,8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="â³ PENDIENTE"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasPendientes.Count, StringFormat='{}{0} tareas'}"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista de tareas -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TareasPendientes}"
                                      dd:DragDrop.IsDragSource="True"
                                      dd:DragDrop.IsDropTarget="True"
                                      dd:DragDrop.DropHandler="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanCardStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- TÃ­tulo -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFFFFF"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,8"/>

                                            <!-- Prioridad y Fecha -->
                                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,3"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding FechaLimiteTarea, StringFormat='ðŸ“… {0:dd/MM}'}"
                                                           FontSize="10"
                                                           Foreground="#B0B8C8"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- Emisor -->
                                            <Border Grid.Row="2"
                                                    Background="#16213e"
                                                    CornerRadius="8"
                                                    Padding="6,4">
                                                <TextBlock FontSize="10" Foreground="#B0B8C8">
                                                    <Run Text="ðŸ‘¤ De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                         Foreground="#F39C12"
                                                         FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- COLUMNA 2: COMPLETADAS -->
            <!-- ========================================== -->
            <Border Grid.Column="1" Style="{StaticResource KanbanColumnStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de columna -->
                    <Border Grid.Row="0" Background="#27AE60" CornerRadius="8" Padding="10,8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="âœ… COMPLETADO"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasCompletadas.Count, StringFormat='{}{0} tareas'}"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista de tareas -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TareasCompletadas}"
                                      dd:DragDrop.IsDragSource="True"
                                      dd:DragDrop.IsDropTarget="True"
                                      dd:DragDrop.DropHandler="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanCardStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- TÃ­tulo -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFFFFF"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,8"/>

                                            <!-- Prioridad y Fecha -->
                                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,3"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding FechaCompletadaTarea, StringFormat='âœ“ {0:dd/MM}'}"
                                                           FontSize="10"
                                                           Foreground="#27AE60"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- Emisor -->
                                            <Border Grid.Row="2"
                                                    Background="#16213e"
                                                    CornerRadius="8"
                                                    Padding="6,4">
                                                <TextBlock FontSize="10" Foreground="#B0B8C8">
                                                    <Run Text="ðŸ‘¤ De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                         Foreground="#F39C12"
                                                         FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- COLUMNA 3: VENCIDAS -->
            <!-- ========================================== -->
            <Border Grid.Column="2" Style="{StaticResource KanbanColumnStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de columna -->
                    <Border Grid.Row="0" Background="#E67E22" CornerRadius="8" Padding="10,8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ VENCIDO"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasVencidas.Count, StringFormat='{}{0} tareas'}"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista de tareas -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TareasVencidas}"
                                      dd:DragDrop.IsDragSource="True"
                                      dd:DragDrop.IsDropTarget="True"
                                      dd:DragDrop.DropHandler="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanCardStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- TÃ­tulo -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFFFFF"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,8"/>

                                            <!-- Prioridad y Fecha -->
                                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,3"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding TiempoRestante}"
                                                           FontSize="10"
                                                           Foreground="#E67E22"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           TextWrapping="Wrap"/>
                                            </Grid>

                                            <!-- Emisor -->
                                            <Border Grid.Row="2"
                                                    Background="#16213e"
                                                    CornerRadius="8"
                                                    Padding="6,4">
                                                <TextBlock FontSize="10" Foreground="#B0B8C8">
                                                    <Run Text="ðŸ‘¤ De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                         Foreground="#F39C12"
                                                         FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- COLUMNA 4: OBSERVADAS -->
            <!-- ========================================== -->
            <Border Grid.Column="3" Style="{StaticResource KanbanColumnStyle}" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de columna -->
                    <Border Grid.Row="0" Background="#E74C3C" CornerRadius="8" Padding="10,8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘ï¸ OBSERVADO"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TareasObservadas.Count, StringFormat='{}{0} tareas'}"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista de tareas -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TareasObservadas}"
                                      dd:DragDrop.IsDragSource="True"
                                      dd:DragDrop.IsDropTarget="True"
                                      dd:DragDrop.DropHandler="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanCardStyle}"
                                            MouseLeftButtonDown="TareaItem_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- TÃ­tulo -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding TituloTarea}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFFFFF"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,8"/>

                                            <!-- Prioridad y Fecha -->
                                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding PrioridadTarea, Converter={StaticResource PrioridadToColorConverter}}"
                                                        CornerRadius="8"
                                                        Padding="6,3"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding PrioridadTarea}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding FechaLimiteTarea, StringFormat='ðŸ“… {0:dd/MM}'}"
                                                           FontSize="10"
                                                           Foreground="#B0B8C8"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- Emisor -->
                                            <Border Grid.Row="2"
                                                    Background="#16213e"
                                                    CornerRadius="8"
                                                    Padding="6,4">
                                                <TextBlock FontSize="10" Foreground="#B0B8C8">
                                                    <Run Text="ðŸ‘¤ De:"/>
                                                    <Run Text="{Binding UsuarioEmisor.Empleado.NombresEmpleado}"
                                                         Foreground="#F39C12"
                                                         FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
