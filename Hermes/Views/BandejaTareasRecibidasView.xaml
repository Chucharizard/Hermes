                    </Border>

                    <!-- Lista de tareas -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TareasObservadas}"
                                      MinHeight="300"
                                      Background="Transparent"
