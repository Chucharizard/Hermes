<UserControl x:Class="Hermes.Views.BandejaTareasRecibidasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Hermes.ViewModels"
             xmlns:views="clr-namespace:Hermes.Views"
             xmlns:converters="clr-namespace:Hermes.Converters"
             xmlns:dd="urn:gong-wpf-dragdrop">

    <UserControl.DataContext>
        <viewmodels:BandejaTareasRecibidasViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:PrioridadToColorConverter x:Key="PrioridadToColorConverter"/>
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <converters:TareaSeleccionadaToGridLengthConverter x:Key="TareaSeleccionadaToGridLengthConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para tarjetas Kanban (tema morado medianoche) -->
        <Style x:Key="KanbanCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.2" Color="{DynamicResource BackgroundDarkestColor}"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.4" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para columnas Kanban -->
        <Style x:Key="KanbanColumnStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundDarkest}"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource BackgroundDarkestColor}"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Columnas dinÃ¡micas: se ajustan segÃºn si hay tarea seleccionada -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding TareaSeleccionada, Converter={StaticResource TareaSeleccionadaToGridLengthConverter}, ConverterParameter=Lista}"/>
            <ColumnDefinition Width="{Binding TareaSeleccionada, Converter={StaticResource TareaSeleccionadaToGridLengthConverter}, ConverterParameter=Separador}"/>
            <ColumnDefinition Width="{Binding TareaSeleccionada, Converter={StaticResource TareaSeleccionadaToGridLengthConverter}, ConverterParameter=Detalle}"/>
        </Grid.ColumnDefinitions>

        <!-- ========================================== -->
        <!-- COLUMNA 1: TABLERO KANBAN -->
        <!-- ========================================== -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header compacto + EstadÃ­sticas inline (tema morado medianoche) -->
        <Border Grid.Row="0" CornerRadius="12" Padding="18,12" Margin="0,0,0,15"
                Background="{DynamicResource CardGradient}"
                BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="{DynamicResource BackgroundDarkestColor}"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TÃ­tulo -->
                <TextBlock Grid.Column="0"
                           Text="ðŸ“¥ Bandeja de Tareas Recibidas (Vista Kanban)"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryColor}"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- EstadÃ­sticas inline compactas -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Total -->
                    <Border Background="{DynamicResource PrimaryColor}" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalRecibidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Total"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Pendientes -->
                    <Border Background="{DynamicResource WarningColor}" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalPendientes}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Pendientes"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Completadas -->
                    <Border Background="{DynamicResource SuccessColor}" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalCompletadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Completadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Vencidas -->
                    <Border Background="{DynamicResource WarningColor}" CornerRadius="12" Padding="10,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalVencidas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Vencidas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Observadas -->
                    <Border Background="{DynamicResource DangerColor}" CornerRadius="12" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalObservadas}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Observadas"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Barra de bÃºsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                    Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
