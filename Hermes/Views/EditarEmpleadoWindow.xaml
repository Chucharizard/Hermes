<Window x:Class="Hermes.Views.EditarEmpleadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Hermes.Helpers"
        Title="Editar Empleado"
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Border Width="550" Background="White"
                CornerRadius="10"
                Padding="40"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="âœ Editar Empleado"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- CI (readonly) -->
                    <TextBlock Text="Cedula de Identidad (CI):"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.CiEmpleado, Mode=OneWay}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"
                             IsEnabled="False"
                             Background="#ECF0F1"/>

                    <!-- Nombres -->
                    <TextBlock Text="Nombres:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.NombresEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>

                    <!-- Apellidos -->
                    <TextBlock Text="Apellidos:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.ApellidosEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>

                    <!-- Telefono -->
                    <TextBlock Text="Telefono:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.TelefonoEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>

                    <!-- Correo -->
                    <TextBlock Text="Correo Electronico:"
                               FontSize="12"
                               Foreground="#34495E"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Empleado.CorreoEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,15"/>

                    <!-- Activo -->
                    <CheckBox Content="Empleado Activo"
                              IsChecked="{Binding Empleado.EsActivoEmpleado}"
                              FontSize="12"
                              Foreground="#34495E"
                              Margin="0,0,0,20"/>

                    <!-- Mensaje de Error -->
                    <Border Background="#FFEBEE"
                            CornerRadius="4"
                            Padding="10,8"
                            Margin="0,0,0,15"
                            Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding MensajeError}"
                                   Foreground="#C62828"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Botones -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Cancelar"
                                Command="{Binding CancelarCommand}"
                                Height="40"
                                Background="#95A5A6"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="0,0,5,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7F8C8D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="1"
                                Content="Actualizar Empleado"
                                Command="{Binding ActualizarCommand}"
                                Height="40"
                                Background="#F39C12"
                                Foreground="White"
                                FontSize="14"
                                BorderThickness="0"
                                Margin="5,0,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E67E22"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
