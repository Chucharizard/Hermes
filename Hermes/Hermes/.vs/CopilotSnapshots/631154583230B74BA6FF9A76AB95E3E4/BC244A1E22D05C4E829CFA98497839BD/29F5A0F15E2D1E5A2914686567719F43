using System.Configuration;

namespace Hermes.Data
{
    public static class DatabaseHelper
    {
        public static string GetConnectionString()
        {
            return ConfigurationManager.ConnectionStrings["InmobiliarioDb"]?.ConnectionString 
                ?? "Server=localhost;Database=SistemaInmobiliario;Trusted_Connection=True;TrustServerCertificate=True;";
        }

        public static async Task<bool> TestConnectionAsync()
        {
            try
            {
                using var context = new InmobiliarioDbContext();
                return await context.Database.CanConnectAsync();
            }
            catch
            {
                return false;
            }
        }
    }
}
