using System.IO;

namespace Hermes.Helpers
{
    public static class FileHelper
    {
        public static string GetAppDataPath()
        {
            var path = Path.Combine(
                Environment.GetFolderPath(Environment.SpecialFolder.ApplicationData),
                "Hermes");
            
            if (!Directory.Exists(path))
                Directory.CreateDirectory(path);
            
            return path;
        }

        public static string GetImagesPath()
        {
            var path = Path.Combine(GetAppDataPath(), "Images");
            
            if (!Directory.Exists(path))
                Directory.CreateDirectory(path);
            
            return path;
        }

        public static async Task<bool> SaveImageAsync(string sourcePath, string fileName)
        {
            try
            {
                var destPath = Path.Combine(GetImagesPath(), fileName);
                await Task.Run(() => File.Copy(sourcePath, destPath, true));
                return true;
            }
            catch
            {
                return false;
            }
        }

        public static bool DeleteImage(string fileName)
        {
            try
            {
                var path = Path.Combine(GetImagesPath(), fileName);
                if (File.Exists(path))
                {
                    File.Delete(path);
                    return true;
                }
                return false;
            }
            catch
            {
                return false;
            }
        }
    }
}
